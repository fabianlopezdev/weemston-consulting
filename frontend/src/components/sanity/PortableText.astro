---
import { PortableText as AstroPortableText } from 'astro-portabletext';
import type { PortableTextBlock } from '@portabletext/types';

interface Props {
  content: PortableTextBlock[];
}

const { content } = Astro.props;
---

<div class="portable-text">
  <AstroPortableText value={content} />
</div>

<style>
  .portable-text {
    line-height: 1.6;
  }

  .portable-text :global(p) {
    margin-block-end: 1em;
  }

  .portable-text :global(p:last-child) {
    margin-block-end: 0;
  }

  .portable-text :global(strong) {
    font-weight: 600;
  }

  .portable-text :global(em) {
    font-style: italic;
  }

  .portable-text :global(a) {
    color: var(--color-primary, #0066cc);
    text-decoration: underline;
  }

  .portable-text :global(a:hover) {
    opacity: 0.8;
  }

  .portable-text :global(h2) {
    font-size: var(--font-size-xl);
    font-weight: 600;
    margin-block: 1.5em 0.5em;
  }

  .portable-text :global(h3) {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin-block: 1.25em 0.5em;
  }

  .portable-text :global(h4) {
    font-size: var(--font-size-md);
    font-weight: 600;
    margin-block: 1em 0.5em;
  }

  .portable-text :global(ul),
  .portable-text :global(ol) {
    margin-block: 1em;
    padding-inline-start: 1.5em;
  }

  .portable-text :global(li) {
    margin-block-end: 0.5em;
  }

  .portable-text :global(blockquote) {
    border-inline-start: 4px solid var(--color-border, #e0e0e0);
    padding-inline-start: 1em;
    margin-block: 1em;
    font-style: italic;
    opacity: 0.9;
  }

  .portable-text :global(code) {
    background: var(--color-surface-alt, #f5f5f5);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-family: monospace;
    font-size: 0.9em;
  }
</style>
