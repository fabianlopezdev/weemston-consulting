---
import {
  urlForImage,
  getSrcSet,
  getImageDimensions,
  getLqip,
} from '@lib/utils/image';
import type { SanityImageSource } from '@sanity/image-url/lib/types/types';

export interface Props {
  image: SanityImageSource;
  alt: string;
  width?: number;
  height?: number;
  sizes?: string;
  loading?: 'lazy' | 'eager';
  class?: string;
  /** Disable LQIP blur-up effect */
  disableLqip?: boolean;
}

const {
  image,
  alt,
  width,
  height,
  sizes = '100vw',
  loading = 'lazy',
  class: className,
  disableLqip = false,
} = Astro.props;

const dimensions = getImageDimensions(image);
const src = urlForImage(image)
  .width(width || 1200)
  .url();
const srcSet = getSrcSet(image);
const lqip = disableLqip ? null : getLqip(image);

const computedWidth = width || dimensions?.width || 1200;
const computedHeight =
  height ||
  (dimensions?.aspectRatio
    ? computedWidth / dimensions.aspectRatio
    : undefined);

const hasLqip = !!lqip;
---

{
  hasLqip ? (
    <div
      class:list={['image-blur-wrapper', className]}
      style={`
        background-image: url(${lqip});
        background-size: cover;
        background-position: center;
        aspect-ratio: ${computedWidth} / ${computedHeight || computedWidth};
      `}
    >
      <img
        src={src}
        srcset={srcSet}
        alt={alt}
        width={computedWidth}
        height={computedHeight}
        sizes={sizes}
        loading={loading}
        class="image-blur-target"
        decoding="async"
        onload="this.parentElement.classList.add('loaded')"
      />
    </div>
  ) : (
    <img
      src={src}
      srcset={srcSet}
      alt={alt}
      width={computedWidth}
      height={computedHeight}
      sizes={sizes}
      loading={loading}
      class={className}
      decoding="async"
    />
  )
}

<style is:global>
  .image-blur-wrapper {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .image-blur-wrapper .image-blur-target {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.4s ease-in-out;
  }

  .image-blur-wrapper.loaded .image-blur-target {
    opacity: 1;
  }
</style>
