---
import { urlForImage } from '@lib/sanity/image';
import SectionTitle from '@components/ui/SectionTitle.astro';
import { resolveColorSelection } from '@lib/sanity/colorResolver';
import { sanityClient as client } from 'sanity:client';
import { siteSettingsQuery } from '@lib/sanity/queries';

interface ColorData {
  label?: string;
  value: string;
}

interface Testimonial {
  _id: string;
  name: string;
  position?: string;
  company?: string;
  websiteUrl?: string;
  quote: string;
  avatar?: any;
}

interface Props {
  title: string;
  testimonials: Testimonial[];
  // Section background color settings
  backgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  backgroundColorShade?: number;
  backgroundCustomColor?: ColorData;
  // Card background color settings
  cardBackgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  cardBackgroundColorShade?: number;
  cardBackgroundCustomColor?: ColorData;
  // Card border color settings
  cardBorderColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  cardBorderColorShade?: number;
  cardBorderCustomColor?: ColorData;
  // Text color
  textColor?: 'base' | 'contrast';
}

const {
  title,
  testimonials,
  backgroundColorType = 'default',
  backgroundColorShade = 0,
  backgroundCustomColor,
  cardBackgroundColorType = 'default',
  cardBackgroundColorShade = 0,
  cardBackgroundCustomColor,
  cardBorderColorType = 'primary',
  cardBorderColorShade = 0,
  cardBorderCustomColor,
  textColor = 'base',
} = Astro.props;

// Fetch site settings for colors
const settings = await client.fetch(siteSettingsQuery);
const siteColors = settings?.colors;

// Resolve section background color (null if default)
const backgroundColor =
  backgroundColorType === 'default' || !backgroundColorType
    ? null
    : resolveColorSelection(
        {
          colorType: backgroundColorType,
          shade: backgroundColorShade,
          customColor: backgroundCustomColor,
        },
        siteColors
      );

// Resolve card background color (null if default)
const cardBackgroundColor =
  cardBackgroundColorType === 'default' || !cardBackgroundColorType
    ? null
    : resolveColorSelection(
        {
          colorType: cardBackgroundColorType,
          shade: cardBackgroundColorShade,
          customColor: cardBackgroundCustomColor,
        },
        siteColors
      );

// Resolve card border color (null if default)
const cardBorderColor =
  cardBorderColorType === 'default' || !cardBorderColorType
    ? null
    : resolveColorSelection(
        {
          colorType: cardBorderColorType,
          shade: cardBorderColorShade,
          customColor: cardBorderCustomColor,
        },
        siteColors
      );

// Define CSS variables for dynamic colors
const cssVars: Record<string, string> = {
  '--ts-text':
    textColor === 'contrast'
      ? 'var(--color-text-contrast)'
      : 'var(--color-text)',
  '--ts-text-muted':
    textColor === 'contrast'
      ? 'var(--color-text-contrast)'
      : 'var(--color-text-muted)',
};

// Only set colors if not default
if (backgroundColor) {
  cssVars['--ts-bg'] = backgroundColor;
}
if (cardBackgroundColor) {
  cssVars['--ts-card-bg'] = cardBackgroundColor;
}
if (cardBorderColor) {
  cssVars['--ts-card-border'] = cardBorderColor;
}

const cssVarsString = Object.entries(cssVars)
  .map(([key, value]) => `${key}: ${value}`)
  .join('; ');

// Helper function to render a testimonial card
const renderCard = (testimonial: Testimonial) => {
  const avatarUrl = testimonial.avatar
    ? urlForImage(testimonial.avatar).width(80).height(80).url()
    : null;

  return { testimonial, avatarUrl };
};

// Prepare cards data
const cards = testimonials.map(renderCard);
---

<section class="testimonials-section" style={cssVarsString}>
  <div class="testimonials-section__content">
    <div class="container">
      <SectionTitle>{title}</SectionTitle>

      <div
        class="testimonials-marquee"
        role="region"
        aria-label="Client testimonials"
      >
        <button
          type="button"
          class="testimonials-marquee__arrow testimonials-marquee__arrow--prev"
          aria-label="Previous testimonial"
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            aria-hidden="true"
          >
            <path
              d="M15 19l-7-7 7-7"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>

        <button
          type="button"
          class="testimonials-marquee__arrow testimonials-marquee__arrow--next"
          aria-label="Next testimonial"
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            aria-hidden="true"
          >
            <path
              d="M9 5l7 7-7 7"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>

        <div class="testimonials-marquee__track">
          {/* First set of cards */}
          {
            cards.map(({ testimonial, avatarUrl }) => (
              <div class="testimonial-card">
                <blockquote class="testimonial-card__quote">
                  "{testimonial.quote}"
                </blockquote>
                <div class="testimonial-card__author">
                  {avatarUrl && (
                    <img
                      src={avatarUrl}
                      alt={testimonial.avatar.alt || testimonial.name}
                      class="testimonial-card__avatar"
                    />
                  )}
                  <div class="testimonial-card__info">
                    <p class="testimonial-card__name">{testimonial.name}</p>
                    <p class="testimonial-card__position">
                      {testimonial.position && testimonial.position}
                      {testimonial.company &&
                        (testimonial.websiteUrl ? (
                          <>
                            {testimonial.position && ' at '}
                            <a
                              href={testimonial.websiteUrl}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="testimonial-card__company-link"
                            >
                              {testimonial.company}
                            </a>
                          </>
                        ) : (
                          <>
                            {testimonial.position && ' at '}
                            {testimonial.company}
                          </>
                        ))}
                    </p>
                  </div>
                </div>
              </div>
            ))
          }
          {/* Duplicate set for seamless infinite loop */}
          {
            cards.map(({ testimonial, avatarUrl }) => (
              <div class="testimonial-card" aria-hidden="true">
                <blockquote class="testimonial-card__quote">
                  "{testimonial.quote}"
                </blockquote>
                <div class="testimonial-card__author">
                  {avatarUrl && (
                    <img
                      src={avatarUrl}
                      alt=""
                      class="testimonial-card__avatar"
                    />
                  )}
                  <div class="testimonial-card__info">
                    <p class="testimonial-card__name">{testimonial.name}</p>
                    <p class="testimonial-card__position">
                      {testimonial.position && testimonial.position}
                      {testimonial.company &&
                        (testimonial.websiteUrl ? (
                          <>
                            {testimonial.position && ' at '}
                            <a
                              href={testimonial.websiteUrl}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="testimonial-card__company-link"
                              tabindex="-1"
                            >
                              {testimonial.company}
                            </a>
                          </>
                        ) : (
                          <>
                            {testimonial.position && ' at '}
                            {testimonial.company}
                          </>
                        ))}
                    </p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { Draggable } from 'gsap/Draggable';
  import {
    setupAnimationLifecycle,
    createSectionContract,
  } from '@lib/animation';

  // Register the Draggable plugin
  gsap.registerPlugin(Draggable);

  setupAnimationLifecycle(() => {
    const track = document.querySelector(
      '.testimonials-marquee__track'
    ) as HTMLElement;
    const marquee = document.querySelector(
      '.testimonials-marquee'
    ) as HTMLElement;
    const prevBtn = document.querySelector(
      '.testimonials-marquee__arrow--prev'
    ) as HTMLButtonElement;
    const nextBtn = document.querySelector(
      '.testimonials-marquee__arrow--next'
    ) as HTMLButtonElement;

    if (!track || !marquee) return;

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia(
      '(prefers-reduced-motion: reduce)'
    ).matches;

    // Get card width + gap for scroll distance
    const getCardScrollDistance = (): number => {
      const card = track.querySelector('.testimonial-card') as HTMLElement;
      if (!card) return 500;
      const style = getComputedStyle(track);
      const gap = parseFloat(style.gap) || 24;
      return card.offsetWidth + gap;
    };

    // Pause timer reference
    let resumeTimeout: number | null = null;
    const PAUSE_DURATION = 3000;

    if (!prefersReducedMotion) {
      // Calculate dimensions
      const trackWidth = track.scrollWidth / 2; // Half because content is duplicated
      const speed = 50; // pixels per second
      const duration = trackWidth / speed;

      // Create the auto-scroll animation
      const tl = gsap.to(track, {
        xPercent: -50,
        duration,
        ease: 'none',
        repeat: -1,
      });

      // Wrap position helper for infinite scroll
      const wrapPosition = () => {
        const x = gsap.getProperty(track, 'x') as number;
        if (x < -trackWidth) {
          gsap.set(track, { x: x + trackWidth });
        } else if (x > 0) {
          gsap.set(track, { x: x - trackWidth });
        }
      };

      // Clear any pending resume and pause timeline
      const pauseAutoScroll = () => {
        if (resumeTimeout) {
          clearTimeout(resumeTimeout);
          resumeTimeout = null;
        }
        tl.pause();
      };

      // Resume after delay
      const resumeAutoScroll = (delay: number = 0) => {
        if (resumeTimeout) {
          clearTimeout(resumeTimeout);
        }
        if (delay > 0) {
          resumeTimeout = window.setTimeout(() => {
            tl.resume();
            resumeTimeout = null;
          }, delay);
        } else {
          tl.resume();
        }
      };

      // Arrow click handler
      const scrollByCard = (direction: 'prev' | 'next') => {
        pauseAutoScroll();

        const scrollDistance = getCardScrollDistance();
        const currentX = gsap.getProperty(track, 'x') as number;
        const targetX =
          direction === 'next'
            ? currentX - scrollDistance
            : currentX + scrollDistance;

        gsap.to(track, {
          x: targetX,
          duration: 0.5,
          ease: 'power2.out',
          onUpdate: wrapPosition,
          onComplete: () => {
            wrapPosition();
            resumeAutoScroll(PAUSE_DURATION);
          },
        });
      };

      // Bind arrow buttons
      if (prevBtn) {
        prevBtn.addEventListener('click', () => scrollByCard('prev'));
      }
      if (nextBtn) {
        nextBtn.addEventListener('click', () => scrollByCard('next'));
      }

      // Create draggable instance
      Draggable.create(track, {
        type: 'x',
        inertia: true,
        cursor: 'grab',
        activeCursor: 'grabbing',
        onDragStart: () => {
          pauseAutoScroll();
        },
        onDrag: wrapPosition,
        onThrowUpdate: wrapPosition,
        onThrowComplete: () => {
          wrapPosition();
          resumeAutoScroll(PAUSE_DURATION);
        },
      });

      // Pause on hover (mouse only)
      marquee.addEventListener('mouseenter', () => {
        if (!resumeTimeout) {
          tl.pause();
        }
      });

      marquee.addEventListener('mouseleave', () => {
        if (!resumeTimeout) {
          tl.resume();
        }
      });
    } else {
      // Reduced motion mode: arrows still work for manual scroll
      if (prevBtn && nextBtn) {
        const scrollByCard = (direction: 'prev' | 'next') => {
          const scrollDistance = getCardScrollDistance();
          marquee.scrollBy({
            left: direction === 'next' ? scrollDistance : -scrollDistance,
            behavior: 'auto',
          });
        };

        prevBtn.addEventListener('click', () => scrollByCard('prev'));
        nextBtn.addEventListener('click', () => scrollByCard('next'));
      }
    }

    // Keep existing section contract animation
    createSectionContract('.testimonials-section__content');
  });
</script>

<style>
  .testimonials-section {
    position: relative;
  }

  /* Primary color background that gets revealed when content shrinks */
  .testimonials-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background-color: var(--color-primary);
    z-index: -1;
  }

  /* Content wrapper that shrinks with clip-path */
  .testimonials-section__content {
    /* Initial clip values (starts expanded, contracts on scroll) */
    --section-clip: 0vw;
    --section-radius: 0rem;

    clip-path: inset(
      var(--section-clip) round 0 0 var(--section-radius) var(--section-radius)
    );
    background-color: var(--ts-bg, var(--color-background));
    padding: var(--space-2xl) 0;
    will-change: clip-path;
  }

  /* Marquee container with fade edges */
  .testimonials-marquee {
    overflow: hidden;
    position: relative;
    padding-block: var(--space-sm);
    mask-image: linear-gradient(
      to right,
      transparent,
      black 5%,
      black 95%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 5%,
      black 95%,
      transparent
    );
  }

  /* Arrow navigation buttons */
  .testimonials-marquee__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;

    /* Button reset + sizing */
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    padding: 0;

    /* Styling */
    background-color: color-mix(
      in srgb,
      var(--ts-bg, var(--color-background)) 80%,
      transparent
    );
    border: 1px solid
      var(
        --ts-card-border,
        color-mix(in srgb, var(--color-primary) 30%, transparent)
      );
    border-radius: var(--border-radius-full, 9999px);

    /* Icon color */
    color: var(--ts-text, var(--color-text));

    /* Interaction */
    cursor: pointer;
    transition:
      background-color var(--transition-fast, 150ms),
      border-color var(--transition-fast, 150ms),
      transform var(--transition-fast, 150ms);
  }

  .testimonials-marquee__arrow:hover {
    background-color: var(--ts-bg, var(--color-background));
    border-color: var(--color-primary);
    transform: translateY(-50%) scale(1.05);
  }

  .testimonials-marquee__arrow:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .testimonials-marquee__arrow:active {
    transform: translateY(-50%) scale(0.95);
  }

  .testimonials-marquee__arrow--prev {
    left: var(--space-md);
  }

  .testimonials-marquee__arrow--next {
    right: var(--space-md);
  }

  .testimonials-marquee__arrow svg {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  /* Animated track */
  .testimonials-marquee__track {
    display: flex;
    gap: var(--space-lg);
    width: max-content;
    will-change: transform;
    cursor: grab;
    user-select: none;
  }

  .testimonials-marquee__track:active {
    cursor: grabbing;
  }

  .testimonial-card {
    flex-shrink: 0;
    width: 500px;
    padding: var(--space-lg);
    background-color: var(--ts-card-bg, transparent);
    border: 1px solid
      var(
        --ts-card-border,
        color-mix(in srgb, var(--color-primary) 30%, transparent)
      );
    border-radius: var(--border-radius, 8px);
    display: flex;
    flex-direction: column;
  }

  .testimonial-card__quote {
    font-size: var(--font-size-sm);
    line-height: 1.5;
    margin: 0;
    font-style: italic;
    flex: 1;
    color: var(--ts-text, var(--color-text));
  }

  .testimonial-card__author {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-top: var(--space-lg);
  }

  .testimonial-card__avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  .testimonial-card__info {
    flex: 1;
  }

  .testimonial-card__name {
    font-weight: 600;
    margin-block-end: var(--space-xs);
    color: var(--ts-text, var(--color-text));
  }

  .testimonial-card__position {
    font-size: var(--font-size-sm);
    color: var(--ts-text-muted, var(--color-text-muted));
  }

  .testimonial-card__company-link {
    color: var(--ts-card-border, var(--color-primary));
    text-decoration: none;
    transition: text-decoration var(--transition-fast, 150ms);
  }

  .testimonial-card__company-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .testimonial-card {
      width: 350px;
    }

    .testimonials-marquee__arrow {
      width: 40px;
      height: 40px;
    }

    .testimonials-marquee__arrow svg {
      width: 20px;
      height: 20px;
    }

    .testimonials-marquee__arrow--prev {
      left: var(--space-sm);
    }

    .testimonials-marquee__arrow--next {
      right: var(--space-sm);
    }
  }

  /* Hide arrows on touch devices where swipe is more natural */
  @media (hover: none) and (pointer: coarse) {
    .testimonials-marquee__arrow {
      display: none;
    }
  }

  /* Reduced motion: disable animation */
  @media (prefers-reduced-motion: reduce) {
    .testimonials-marquee__track {
      animation: none !important;
      transform: none !important;
    }

    .testimonials-marquee {
      overflow-x: auto;
      mask-image: none;
      -webkit-mask-image: none;
    }
  }
</style>
