---
import { urlForImage } from '@lib/sanity/image';
import SectionTitle from '@components/ui/SectionTitle.astro';
import { resolveColorSelection } from '@lib/sanity/colorResolver';
import { sanityClient as client } from 'sanity:client';
import { siteSettingsQuery } from '@lib/sanity/queries';

interface ColorData {
  label?: string;
  value: string;
}

interface GradientColorData {
  colorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  shade?: number;
  customColor?: ColorData;
}

interface GradientData {
  direction?: string;
  startColor?: GradientColorData;
  endColor?: GradientColorData;
}

interface SanityImageAsset {
  _id: string;
  url: string;
  metadata?: {
    lqip?: string;
    dimensions?: {
      width: number;
      height: number;
      aspectRatio: number;
    };
  };
}

interface SanityImage {
  asset?: SanityImageAsset;
  alt?: string;
  seoFilename?: string;
  hotspot?: {
    x: number;
    y: number;
  };
  crop?: {
    top: number;
    bottom: number;
    left: number;
    right: number;
  };
}

interface Testimonial {
  _id: string;
  name: string;
  position?: string;
  company?: string;
  websiteUrl?: string;
  quote: string;
  avatar?: any;
}

interface Props {
  title: string;
  showTitle?: boolean;
  testimonials: Testimonial[];
  // Background type toggle
  backgroundType?: 'color' | 'image';
  backgroundImage?: SanityImage;
  // Color mode for color backgrounds
  colorMode?: 'solid' | 'gradient';
  gradient?: GradientData;
  // Section background color settings (for solid)
  backgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  backgroundColorShade?: number;
  backgroundCustomColor?: ColorData;
  // Card background color settings
  cardBackgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  cardBackgroundColorShade?: number;
  cardBackgroundCustomColor?: ColorData;
  // Card border color settings
  cardBorderColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  cardBorderColorShade?: number;
  cardBorderCustomColor?: ColorData;
  // Title color (for image backgrounds)
  titleColor?: 'base' | 'muted' | 'contrast';
  // Text color (card text)
  textColor?: 'base' | 'muted' | 'contrast';
}

const {
  title,
  showTitle = true,
  testimonials,
  backgroundType = 'color',
  backgroundImage,
  colorMode = 'solid',
  gradient,
  backgroundColorType = 'default',
  backgroundColorShade = 0,
  backgroundCustomColor,
  cardBackgroundColorType = 'default',
  cardBackgroundColorShade = 0,
  cardBackgroundCustomColor,
  cardBorderColorType = 'primary',
  cardBorderColorShade = 0,
  cardBorderCustomColor,
  titleColor,
  textColor = 'base',
} = Astro.props;

// Fetch site settings for colors
const settings = await client.fetch(siteSettingsQuery);
const siteColors = settings?.colors;

// Determine background mode
const hasBackgroundImage = backgroundType === 'image' && backgroundImage?.asset;
const isGradient = backgroundType === 'color' && colorMode === 'gradient';
const isSolidColor = backgroundType === 'color' && colorMode !== 'gradient';

// Resolve gradient colors
let gradientCss: string | null = null;
if (isGradient && gradient) {
  const direction = gradient.direction || '135deg';
  const startColor = resolveColorSelection(gradient.startColor, siteColors);
  const endColor = resolveColorSelection(gradient.endColor, siteColors);
  gradientCss = `linear-gradient(${direction}, ${startColor}, ${endColor})`;
}

// Resolve section background color (null if default)
const backgroundColor =
  isSolidColor && (backgroundColorType === 'default' || !backgroundColorType)
    ? null
    : isSolidColor
      ? resolveColorSelection(
          {
            colorType: backgroundColorType,
            shade: backgroundColorShade,
            customColor: backgroundCustomColor,
          },
          siteColors
        )
      : null;

// Resolve card background color (null if default)
const cardBackgroundColor =
  cardBackgroundColorType === 'default' || !cardBackgroundColorType
    ? null
    : resolveColorSelection(
        {
          colorType: cardBackgroundColorType,
          shade: cardBackgroundColorShade,
          customColor: cardBackgroundCustomColor,
        },
        siteColors
      );

// Resolve card border color (null if default)
const cardBorderColor =
  cardBorderColorType === 'default' || !cardBorderColorType
    ? null
    : resolveColorSelection(
        {
          colorType: cardBorderColorType,
          shade: cardBorderColorShade,
          customColor: cardBorderCustomColor,
        },
        siteColors
      );

// Generate background image URL if type is 'image'
const bgImageUrl = hasBackgroundImage
  ? urlForImage(backgroundImage).width(1920).height(1080).auto('format').url()
  : null;
const bgImageLqip = hasBackgroundImage
  ? backgroundImage?.asset?.metadata?.lqip
  : null;
const bgImageAlt = backgroundImage?.alt || '';
const bgHotspot = backgroundImage?.hotspot;
const bgHotspotX = bgHotspot ? `${bgHotspot.x * 100}%` : '50%';
const bgHotspotY = bgHotspot ? `${bgHotspot.y * 100}%` : '50%';

// Helper to resolve text color using centralized CSS variables
const getTextColorVar = (color: 'base' | 'muted' | 'contrast'): string => {
  switch (color) {
    case 'contrast':
      return 'var(--color-text-contrast)';
    case 'muted':
      return 'var(--color-text-muted)';
    default:
      return 'var(--color-text)';
  }
};

// Helper to resolve title color (base uses accent color for titles)
const getTitleColorVar = (color: 'base' | 'muted' | 'contrast'): string => {
  switch (color) {
    case 'contrast':
      return 'var(--color-text-contrast)';
    case 'muted':
      return 'var(--color-text-muted)';
    default:
      return 'var(--color-accent)';
  }
};

// Determine effective title color - default to contrast for image backgrounds
const effectiveTitleColor = hasBackgroundImage
  ? (titleColor ?? 'contrast')
  : 'base';

// Define CSS variables for dynamic colors
const cssVars: Record<string, string> = {
  '--ts-title': getTitleColorVar(effectiveTitleColor),
  '--ts-text': getTextColorVar(textColor),
  '--ts-text-muted':
    textColor === 'contrast'
      ? 'var(--color-text-contrast)'
      : 'var(--color-text-muted)',
};

// Set background based on type
if (gradientCss) {
  cssVars['--ts-bg'] = gradientCss;
} else if (backgroundColor) {
  cssVars['--ts-bg'] = backgroundColor;
}
if (cardBackgroundColor) {
  cssVars['--ts-card-bg'] = cardBackgroundColor;
}
if (cardBorderColor) {
  cssVars['--ts-card-border'] = cardBorderColor;
}

const cssVarsString = Object.entries(cssVars)
  .map(([key, value]) => `${key}: ${value}`)
  .join('; ');

// Helper function to render a testimonial card
const renderCard = (testimonial: Testimonial) => {
  const avatarUrl = testimonial.avatar
    ? urlForImage(testimonial.avatar).width(80).height(80).url()
    : null;

  return { testimonial, avatarUrl };
};

// Prepare cards data
const cards = testimonials.map(renderCard);
---

<section
  class:list={[
    'testimonials-section',
    { 'testimonials-section--has-bg-image': hasBackgroundImage },
  ]}
  style={cssVarsString}
>
  <div class="testimonials-section__content">
    {
      /* Background Image Layer - inside content so it gets clipped with parallax */
    }
    {
      hasBackgroundImage && bgImageUrl && (
        <div class="testimonials-section__bg">
          <div
            class="testimonials-section__bg-blur"
            style={bgImageLqip ? `background-image: url(${bgImageLqip})` : ''}
          />
          <img
            src={bgImageUrl}
            alt={bgImageAlt}
            class="testimonials-section__bg-image"
            style={`object-position: ${bgHotspotX} ${bgHotspotY}`}
            loading="eager"
            decoding="async"
          />
          <div class="testimonials-section__bg-overlay" />
          <div class="testimonials-section__bg-grain" aria-hidden="true" />
        </div>
      )
    }
    <div class="container">
      <SectionTitle title={title} showTitle={showTitle} />

      <div
        class="testimonials-marquee"
        role="region"
        aria-label="Client testimonials"
      >
        <button
          type="button"
          class="testimonials-marquee__arrow testimonials-marquee__arrow--prev"
          aria-label="Previous testimonial"
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            aria-hidden="true"
          >
            <path
              d="M15 19l-7-7 7-7"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>

        <button
          type="button"
          class="testimonials-marquee__arrow testimonials-marquee__arrow--next"
          aria-label="Next testimonial"
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            aria-hidden="true"
          >
            <path
              d="M9 5l7 7-7 7"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>

        <div class="testimonials-marquee__track">
          {/* First set of cards */}
          {
            cards.map(({ testimonial, avatarUrl }) => (
              <div class="testimonial-card">
                <blockquote class="testimonial-card__quote">
                  "{testimonial.quote}"
                </blockquote>
                <div class="testimonial-card__author">
                  {avatarUrl && (
                    <img
                      src={avatarUrl}
                      alt={testimonial.avatar.alt || testimonial.name}
                      class="testimonial-card__avatar"
                    />
                  )}
                  <div class="testimonial-card__info">
                    <p class="testimonial-card__name">{testimonial.name}</p>
                    <p class="testimonial-card__position">
                      {testimonial.position && testimonial.position}
                      {testimonial.company &&
                        (testimonial.websiteUrl ? (
                          <>
                            {testimonial.position && ' at '}
                            <a
                              href={testimonial.websiteUrl}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="testimonial-card__company-link"
                            >
                              {testimonial.company}
                            </a>
                          </>
                        ) : (
                          <>
                            {testimonial.position && ' at '}
                            {testimonial.company}
                          </>
                        ))}
                    </p>
                  </div>
                </div>
              </div>
            ))
          }
          {/* Duplicate set for seamless infinite loop */}
          {
            cards.map(({ testimonial, avatarUrl }) => (
              <div class="testimonial-card" aria-hidden="true">
                <blockquote class="testimonial-card__quote">
                  "{testimonial.quote}"
                </blockquote>
                <div class="testimonial-card__author">
                  {avatarUrl && (
                    <img
                      src={avatarUrl}
                      alt=""
                      class="testimonial-card__avatar"
                    />
                  )}
                  <div class="testimonial-card__info">
                    <p class="testimonial-card__name">{testimonial.name}</p>
                    <p class="testimonial-card__position">
                      {testimonial.position && testimonial.position}
                      {testimonial.company &&
                        (testimonial.websiteUrl ? (
                          <>
                            {testimonial.position && ' at '}
                            <a
                              href={testimonial.websiteUrl}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="testimonial-card__company-link"
                              tabindex="-1"
                            >
                              {testimonial.company}
                            </a>
                          </>
                        ) : (
                          <>
                            {testimonial.position && ' at '}
                            {testimonial.company}
                          </>
                        ))}
                    </p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { Draggable } from 'gsap/Draggable';
  import {
    setupAnimationLifecycle,
    createSectionContract,
  } from '@lib/animation';

  // Register the Draggable plugin
  gsap.registerPlugin(Draggable);

  setupAnimationLifecycle(() => {
    // Handle background image blur-up loading effect
    const bgImage = document.querySelector(
      '.testimonials-section__bg-image'
    ) as HTMLImageElement;
    const bgBlur = document.querySelector(
      '.testimonials-section__bg-blur'
    ) as HTMLElement;

    if (bgImage) {
      const handleImageLoad = () => {
        bgImage.classList.add('loaded');
        if (bgBlur) {
          bgBlur.classList.add('loaded');
        }
      };

      // Check if already loaded (cached)
      if (bgImage.complete && bgImage.naturalHeight !== 0) {
        handleImageLoad();
      } else {
        bgImage.addEventListener('load', handleImageLoad);
      }
    }

    const track = document.querySelector(
      '.testimonials-marquee__track'
    ) as HTMLElement;
    const marquee = document.querySelector(
      '.testimonials-marquee'
    ) as HTMLElement;
    const prevBtn = document.querySelector(
      '.testimonials-marquee__arrow--prev'
    ) as HTMLButtonElement;
    const nextBtn = document.querySelector(
      '.testimonials-marquee__arrow--next'
    ) as HTMLButtonElement;

    if (!track || !marquee) return;

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia(
      '(prefers-reduced-motion: reduce)'
    ).matches;

    // Check for mobile
    const isMobile = window.matchMedia('(max-width: 768px)').matches;

    // Get card width + gap for scroll distance
    const getCardScrollDistance = (): number => {
      const card = track.querySelector(
        '.testimonial-card:not([aria-hidden])'
      ) as HTMLElement;
      if (!card) return 500;
      const style = getComputedStyle(track);
      const gap = parseFloat(style.gap) || 24;
      return card.offsetWidth + gap;
    };

    // Mobile: Single card navigation with arrows (infinite scroll using duplicates)
    if (isMobile) {
      const allCards = track.querySelectorAll('.testimonial-card');
      const originalCount = allCards.length / 2; // Half are originals, half are duplicates
      let currentIndex = 0; // Track position in original set (0 to originalCount-1)

      const card = allCards[0] as HTMLElement;
      const cardWidth = card?.offsetWidth || 0;

      // Position track to show first card
      gsap.set(track, { x: 0 });

      const goToCard = (direction: 'prev' | 'next') => {
        let targetIndex =
          direction === 'next' ? currentIndex + 1 : currentIndex - 1;

        // Handle wrap-around using the duplicate cards
        if (direction === 'prev' && currentIndex === 0) {
          // Going prev from first card: jump to duplicate set, then animate to last original
          // Jump to show first card of duplicate set (same visual as first original)
          gsap.set(track, { x: -originalCount * cardWidth });
          // Animate to the last card of original set (which is to the left of duplicate set)
          gsap.to(track, {
            x: -(originalCount - 1) * cardWidth,
            duration: 0.4,
            ease: 'power2.out',
          });
          currentIndex = originalCount - 1;
        } else if (direction === 'next' && currentIndex === originalCount - 1) {
          // Going next from last card: animate into duplicate set, then jump back
          gsap.to(track, {
            x: -originalCount * cardWidth,
            duration: 0.4,
            ease: 'power2.out',
            onComplete: () => {
              // Jump back to first original (same visual)
              gsap.set(track, { x: 0 });
            },
          });
          currentIndex = 0;
        } else {
          // Normal navigation within original set
          if (targetIndex < 0) targetIndex = originalCount - 1;
          if (targetIndex >= originalCount) targetIndex = 0;

          gsap.to(track, {
            x: -targetIndex * cardWidth,
            duration: 0.4,
            ease: 'power2.out',
          });
          currentIndex = targetIndex;
        }
      };

      if (prevBtn) {
        prevBtn.addEventListener('click', () => goToCard('prev'));
      }
      if (nextBtn) {
        nextBtn.addEventListener('click', () => goToCard('next'));
      }

      return;
    }

    // Desktop: Auto-scroll marquee behavior
    // Pause timer reference
    let resumeTimeout: number | null = null;
    const PAUSE_DURATION = 3000;

    if (!prefersReducedMotion) {
      // Calculate dimensions
      const trackWidth = track.scrollWidth / 2; // Half because content is duplicated
      const speed = 50; // pixels per second
      const duration = trackWidth / speed;

      // Create the auto-scroll animation
      const tl = gsap.to(track, {
        xPercent: -50,
        duration,
        ease: 'none',
        repeat: -1,
      });

      // Wrap position helper for infinite scroll
      const wrapPosition = () => {
        const x = gsap.getProperty(track, 'x') as number;
        if (x < -trackWidth) {
          gsap.set(track, { x: x + trackWidth });
        } else if (x > 0) {
          gsap.set(track, { x: x - trackWidth });
        }
      };

      // Clear any pending resume and pause timeline
      const pauseAutoScroll = () => {
        if (resumeTimeout) {
          clearTimeout(resumeTimeout);
          resumeTimeout = null;
        }
        tl.pause();
      };

      // Resume after delay
      const resumeAutoScroll = (delay: number = 0) => {
        if (resumeTimeout) {
          clearTimeout(resumeTimeout);
        }
        if (delay > 0) {
          resumeTimeout = window.setTimeout(() => {
            tl.resume();
            resumeTimeout = null;
          }, delay);
        } else {
          tl.resume();
        }
      };

      // Arrow click handler
      const scrollByCard = (direction: 'prev' | 'next') => {
        pauseAutoScroll();

        const scrollDistance = getCardScrollDistance();
        const currentX = gsap.getProperty(track, 'x') as number;
        const targetX =
          direction === 'next'
            ? currentX - scrollDistance
            : currentX + scrollDistance;

        gsap.to(track, {
          x: targetX,
          duration: 0.5,
          ease: 'power2.out',
          onUpdate: wrapPosition,
          onComplete: () => {
            wrapPosition();
            resumeAutoScroll(PAUSE_DURATION);
          },
        });
      };

      // Bind arrow buttons
      if (prevBtn) {
        prevBtn.addEventListener('click', () => scrollByCard('prev'));
      }
      if (nextBtn) {
        nextBtn.addEventListener('click', () => scrollByCard('next'));
      }

      // Create draggable instance
      Draggable.create(track, {
        type: 'x',
        inertia: true,
        cursor: 'grab',
        activeCursor: 'grabbing',
        onDragStart: () => {
          pauseAutoScroll();
        },
        onDrag: wrapPosition,
        onThrowUpdate: wrapPosition,
        onThrowComplete: () => {
          wrapPosition();
          resumeAutoScroll(PAUSE_DURATION);
        },
      });

      // Pause on hover (mouse only)
      marquee.addEventListener('mouseenter', () => {
        if (!resumeTimeout) {
          tl.pause();
        }
      });

      marquee.addEventListener('mouseleave', () => {
        if (!resumeTimeout) {
          tl.resume();
        }
      });
    } else {
      // Reduced motion mode: arrows still work for manual scroll
      if (prevBtn && nextBtn) {
        const scrollByCard = (direction: 'prev' | 'next') => {
          const scrollDistance = getCardScrollDistance();
          marquee.scrollBy({
            left: direction === 'next' ? scrollDistance : -scrollDistance,
            behavior: 'auto',
          });
        };

        prevBtn.addEventListener('click', () => scrollByCard('prev'));
        nextBtn.addEventListener('click', () => scrollByCard('next'));
      }
    }

    // Keep existing section contract animation
    createSectionContract('.testimonials-section__content');
  });
</script>

<style>
  .testimonials-section {
    position: relative;
  }

  /* Primary color background that gets revealed when content shrinks */
  .testimonials-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background-color: var(--color-primary);
    z-index: -1;
  }

  /* ===== Background Image Styles ===== */
  .testimonials-section__bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  /* LQIP blur placeholder - fades out when main image loads */
  .testimonials-section__bg-blur {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    filter: blur(20px);
    transform: scale(1.1);
    opacity: 1;
    transition: opacity 0.6s ease-out;
  }

  .testimonials-section__bg-blur.loaded {
    opacity: 0;
  }

  /* Main background image with Ken Burns effect */
  .testimonials-section__bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.6s ease-out;
    animation: testimonials-ken-burns 25s ease-in-out infinite alternate;
  }

  .testimonials-section__bg-image.loaded {
    opacity: 1;
  }

  @keyframes testimonials-ken-burns {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.08);
    }
  }

  /* Dark overlay for text legibility */
  .testimonials-section__bg-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.35) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.6) 100%
    );
  }

  /* Subtle grain texture for depth */
  .testimonials-section__bg-grain {
    position: absolute;
    inset: 0;
    opacity: 0.08;
    pointer-events: none;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
  }

  /* When background image is present, adjust content styling */
  .testimonials-section--has-bg-image .testimonials-section__content {
    background-color: transparent;
  }

  /* Ensure content container is above background image layer */
  .testimonials-section--has-bg-image .container {
    position: relative;
    z-index: 1;
  }

  /* Override section title color when set via CSS variable */
  .testimonials-section :global(.section-title) {
    color: var(--ts-title, var(--color-accent));
  }

  /* Reduce motion: disable Ken Burns animation */
  @media (prefers-reduced-motion: reduce) {
    .testimonials-section__bg-image {
      animation: none;
    }
  }

  /* Content wrapper that shrinks with clip-path */
  .testimonials-section__content {
    /* Initial clip values (starts expanded, contracts on scroll) */
    --section-clip: 0vw;
    --section-radius: 0rem;

    position: relative;
    clip-path: inset(
      var(--section-clip) round 0 0 var(--section-radius) var(--section-radius)
    );
    background-color: var(--ts-bg, var(--color-background));
    padding: var(--space-2xl) 0;
  }

  /* Marquee container with fade edges */
  .testimonials-marquee {
    overflow: hidden;
    position: relative;
    padding-block: var(--space-sm);
    mask-image: linear-gradient(
      to right,
      transparent,
      black 5%,
      black 95%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 5%,
      black 95%,
      transparent
    );
  }

  /* Arrow navigation buttons */
  .testimonials-marquee__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;

    /* Button reset + sizing */
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    padding: 0;

    /* Styling */
    background-color: color-mix(
      in srgb,
      var(--ts-bg, var(--color-background)) 80%,
      transparent
    );
    border: 1px solid
      var(
        --ts-card-border,
        color-mix(in srgb, var(--color-primary) 30%, transparent)
      );
    border-radius: var(--border-radius-full, 9999px);

    /* Icon color */
    color: var(--ts-text, var(--color-text));

    /* Interaction */
    cursor: pointer;
    transition:
      background-color var(--transition-fast, 150ms),
      border-color var(--transition-fast, 150ms),
      transform var(--transition-fast, 150ms);
  }

  .testimonials-marquee__arrow:hover {
    background-color: var(--ts-bg, var(--color-background));
    border-color: var(--color-primary);
