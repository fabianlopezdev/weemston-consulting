---
interface Props {
  title: string;
  intro?: string;
  content: any; // Portable text content
}

const { title, intro, content } = Astro.props;

// TODO: Implement proper portable text rendering
// For now, we'll extract plain text from portable text
const getPlainText = (blocks: any[]) => {
  if (!blocks || !Array.isArray(blocks)) return '';
  return blocks
    .filter((block) => block._type === 'block')
    .map((block) => {
      return block.children?.map((child: any) => child.text).join('');
    })
    .join('\n\n');
};

const plainText = getPlainText(content);
---

<section class="our-approach-section">
  <div class="container">
    <h2 class="our-approach-section__title">{title}</h2>

    {intro && <p class="our-approach-section__intro">{intro}</p>}

    <div class="our-approach-section__content">
      {
        plainText
          .split('\n\n')
          .map((paragraph) => (
            <p class="our-approach-section__paragraph">{paragraph}</p>
          ))
      }
    </div>
  </div>
</section>

<style>
  .our-approach-section {
    padding: var(--space-2xl) 0;
    background: var(--color-background-alternate, #f9fafb);
  }

  .our-approach-section__title {
    font-size: var(--font-size-2xl);
    text-align: center;
    margin-block-end: var(--space-md);
  }

  .our-approach-section__intro {
    font-size: var(--font-size-lg);
    text-align: center;
    max-width: 800px;
    margin-inline: auto;
    margin-block-end: var(--space-xl);
    opacity: 0.8;
  }

  .our-approach-section__content {
    max-width: 900px;
    margin-inline: auto;
  }

  .our-approach-section__paragraph {
    font-size: var(--font-size-base);
    line-height: 1.8;
    margin-block-end: var(--space-md);
  }

  .our-approach-section__paragraph:last-child {
    margin-block-end: 0;
  }
</style>

<script>
  import { setupAnimationLifecycle, gsap } from '@lib/animation/utils';
  import { ANIMATION_CONFIG } from '@lib/animation/config';

  setupAnimationLifecycle(() => {
    const section = document.querySelector('.our-approach-section');
    const title = document.querySelector('.our-approach-section__title');
    const intro = document.querySelector('.our-approach-section__intro');
    const paragraphs = document.querySelectorAll(
      '.our-approach-section__paragraph'
    );

    if (!section) return;

    // Initial states
    if (title) gsap.set(title, { opacity: 0, y: 30 });
    if (intro) gsap.set(intro, { opacity: 0, y: 20 });
    paragraphs.forEach((p) => gsap.set(p, { opacity: 0, y: 25 }));

    // Create timeline for header
    const headerTl = gsap.timeline({
      scrollTrigger: {
        trigger: section,
        start: 'top 80%',
        once: true,
        markers: ANIMATION_CONFIG.scrollTrigger.markers,
      },
    });

    // Title fades in
    if (title) {
      headerTl.to(title, {
        opacity: 1,
        y: 0,
        duration: 0.6,
        ease: 'power3.out',
      });
    }

    // Intro follows
    if (intro) {
      headerTl.to(
        intro,
        {
          opacity: 0.8, // Match original opacity
          y: 0,
          duration: 0.5,
          ease: 'power2.out',
        },
        '-=0.3'
      );
    }

    // Paragraphs reveal progressively on scroll
    paragraphs.forEach((paragraph, index) => {
      gsap.to(paragraph, {
        opacity: 1,
        y: 0,
        duration: 0.6,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: paragraph,
          start: 'top 85%',
          once: true,
          markers: ANIMATION_CONFIG.scrollTrigger.markers,
        },
        delay: index * 0.05, // Very slight stagger for smooth reveal
      });
    });
  });
</script>
