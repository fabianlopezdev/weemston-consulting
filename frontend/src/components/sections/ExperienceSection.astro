---
import { Icon } from 'astro-icon/components';
import { urlForImage } from '@lib/sanity/image';
import { resolveColorSelection } from '@lib/sanity/colorResolver';
import { sanityClient as client } from 'sanity:client';
import { siteSettingsQuery } from '@lib/sanity/queries';

interface IconData {
  name: string;
}

interface ImageData {
  asset: any;
  alt?: string;
}

interface IconOrImage {
  type: 'icon' | 'image';
  icon?: IconData;
  image?: ImageData;
}

interface ExperienceCard {
  _key: string;
  number: string;
  title: string;
  description: string;
  iconOrImage: IconOrImage;
  iconBackgroundColorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  iconBackgroundColorShade?: number;
  iconBackgroundCustomColor?: ColorData;
}

interface ColorData {
  label?: string;
  value: string;
}

interface Props {
  title: string;
  description?: string;
  cards: ExperienceCard[];
  // Color settings
  descriptionColor?: 'base' | 'contrast';
  backgroundColorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  backgroundColorShade?: number;
  backgroundCustomColor?: ColorData;
  // Badge colors (with shade)
  badgeColorType?: 'default' | 'primary' | 'secondary' | 'accent' | 'custom';
  badgeColorShade?: number;
  badgeCustomColor?: ColorData;
  badgeBackgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  badgeBackgroundColorShade?: number;
  badgeBackgroundCustomColor?: ColorData;
  badgeTextColor?: 'base' | 'contrast';
  // Circle background color (with shade)
  circleBackgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  circleBackgroundColorShade?: number;
  circleBackgroundCustomColor?: ColorData;
  circleTextColor?: 'base' | 'contrast';
  cardDescriptionColor?: 'base' | 'contrast';
}

const props = Astro.props as any;

const {
  title,
  description,
  cards,
  descriptionColor = 'base',
  backgroundColorType = 'default',
  backgroundColorShade = 0,
  backgroundCustomColor,
  cardDescriptionColor = 'base',
} = Astro.props;

// Use new color fields directly
const badgeColorType = props.badgeColorType ?? 'default';
const badgeColorShade = props.badgeColorShade ?? 0;
const badgeCustomColor = props.badgeCustomColor;
const badgeBackgroundColorType = props.badgeBackgroundColorType ?? 'default';
const badgeBackgroundColorShade = props.badgeBackgroundColorShade ?? 0;
const badgeBackgroundCustomColor = props.badgeBackgroundCustomColor;
const badgeTextColor = props.badgeTextColor ?? 'base';
const circleBackgroundColorType = props.circleBackgroundColorType ?? 'default';
const circleBackgroundColorShade = props.circleBackgroundColorShade ?? 0;
const circleBackgroundCustomColor = props.circleBackgroundCustomColor;
const circleTextColor = props.circleTextColor ?? 'base';

// Fetch site settings for colors
const settings = await client.fetch(siteSettingsQuery);
const siteColors = settings?.colors;

// Resolve background color (null if default)
const backgroundColor =
  backgroundColorType === 'default' || !backgroundColorType
    ? null
    : resolveColorSelection(
        {
          colorType: backgroundColorType,
          shade: backgroundColorShade,
          customColor: backgroundCustomColor,
        },
        siteColors
      );

// Resolve badge border color (with shade) - null if default
const badgeBorderColor =
  badgeColorType === 'default' || !badgeColorType
    ? null
    : resolveColorSelection(
        {
          colorType: badgeColorType,
          shade: badgeColorShade,
          customColor: badgeCustomColor,
        },
        siteColors
      );

// Resolve badge background color (with shade) - null if default
const badgeBackgroundColor =
  badgeBackgroundColorType === 'default' || !badgeBackgroundColorType
    ? null
    : resolveColorSelection(
        {
          colorType: badgeBackgroundColorType,
          shade: badgeBackgroundColorShade,
          customColor: badgeBackgroundCustomColor,
        },
        siteColors
      );

// Resolve circle background color (with shade) - null if default
const circleBackgroundColor =
  circleBackgroundColorType === 'default' || !circleBackgroundColorType
    ? null
    : resolveColorSelection(
        {
          colorType: circleBackgroundColorType,
          shade: circleBackgroundColorShade,
          customColor: circleBackgroundCustomColor,
        },
        siteColors
      );

// Generate image URLs - use larger size for the new layout
const cardImages = cards.map((card) => {
  const hasImage = card.iconOrImage?.type === 'image' && card.iconOrImage.image;
  return hasImage && card.iconOrImage?.image
    ? urlForImage(card.iconOrImage.image).width(800).height(600).url()
    : null;
});

// Resolve icon background colors for each card
const cardIconBgColors = cards.map((card) => {
  if (card.iconOrImage?.type !== 'icon') return null;

  // For custom color or when no selection, use custom color or fallback to original
  if (
    !card.iconBackgroundColorType ||
    card.iconBackgroundColorType === 'custom'
  ) {
    return card.iconBackgroundCustomColor?.value || null;
  }

  return resolveColorSelection(
    {
      colorType: card.iconBackgroundColorType,
      shade: card.iconBackgroundColorShade ?? 500,
      customColor: card.iconBackgroundCustomColor,
    },
    siteColors
  );
});

// Define CSS variables for dynamic colors
const cssVars: Record<string, string> = {
  '--experience-desc-color':
    descriptionColor === 'contrast'
      ? 'var(--color-text-contrast)'
      : 'var(--color-text-muted)',
  '--experience-badge-text-color':
    badgeTextColor === 'contrast'
      ? 'var(--color-text-contrast)'
      : 'var(--color-text-muted)',
  '--experience-circle-text-color':
    circleTextColor === 'contrast'
      ? 'var(--color-text-contrast)'
      : 'var(--color-text-muted)',
  '--experience-card-desc-color':
    cardDescriptionColor === 'contrast'
      ? 'var(--color-text-contrast)'
      : 'var(--color-text-muted)',
};

// Only set if not default
if (badgeBorderColor) {
  cssVars['--experience-badge-border-color'] = badgeBorderColor;
}

if (badgeBackgroundColor) {
  cssVars['--experience-badge-bg-color'] = badgeBackgroundColor;
}

if (circleBackgroundColor) {
  cssVars['--experience-circle-bg'] = circleBackgroundColor;
}

// Only set background if not default
if (backgroundColor) {
  cssVars['--experience-bg'] = backgroundColor;
}

const cssVarsString = Object.entries(cssVars)
  .map(([key, value]) => `${key}: ${value}`)
  .join('; ');
---

<section
  class="experience-section"
  style={`${cssVarsString}; --item-count: ${cards.length}`}
>
  <div class="experience-section__container">
    <!-- Header -->
    <header class="experience-section__header">
      <h2 class="experience-section__title">{title}</h2>
      {
        description && (
          <p class="experience-section__description">{description}</p>
        )
      }
    </header>

    <!-- Desktop: Orbital layout with badges -->
    <div class="experience-orbital">
      <!-- Badges row - starts here, animates to orbital positions -->
      <nav
        class="experience-orbital__badges"
        aria-label="Experience navigation"
      >
        {
          cards.map((card, index) => (
            <button
              type="button"
              class="experience-orbital__badge"
              data-index={index}
              data-active="false"
              aria-pressed="false"
            >
              <span class="experience-orbital__badge-number">
                {card.number}
              </span>
              <span class="experience-orbital__badge-divider" />
              <span class="experience-orbital__badge-title">{card.title}</span>
            </button>
          ))
        }
      </nav>

      <!-- Central circle with description - revealed on scroll -->
      <div class="experience-orbital__center">
        <div class="experience-orbital__ripples">
          <span></span>
          <span></span>
          <span></span>
        </div>
        <div class="experience-orbital__circle">
          <div class="experience-orbital__circle-inner">
            <!-- Default content when no item is hovered -->
            <div class="experience-orbital__default" data-active="true">
              <h3 class="experience-orbital__default-title">{title}</h3>
              <p class="experience-orbital__default-text">
                Hover the badges to explore
              </p>
            </div>
            {
              cards.map((card, index) => (
                <div
                  class="experience-orbital__description"
                  data-index={index}
                  data-active="false"
                >
                  <span class="experience-orbital__desc-number">
                    {card.number}
                  </span>
                  <h3 class="experience-orbital__desc-title">{card.title}</h3>
                  <p class="experience-orbital__desc-text">
                    {card.description}
                  </p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile: Accordion layout -->
    <div class="experience-accordion">
      {
        cards.map((card, index) => (
          <div
            class="experience-accordion__item"
            data-index={index}
            data-active={index === 0 ? 'true' : 'false'}
          >
            <button
              type="button"
              class="experience-accordion__header"
              aria-expanded={index === 0 ? 'true' : 'false'}
            >
              <span class="experience-accordion__number">{card.number}</span>
              <span class="experience-accordion__title">{card.title}</span>
              <span class="experience-accordion__icon" aria-hidden="true">
                +
              </span>
            </button>
            <div class="experience-accordion__content">
              <div class="experience-accordion__image-wrapper">
                {cardImages[index] ? (
                  <img
                    src={cardImages[index]}
                    alt={card.iconOrImage?.image?.alt || card.title}
                    class="experience-accordion__image"
                    loading="lazy"
                  />
                ) : (
                  <div
                    class="experience-accordion__image-placeholder"
                    style={
                      cardIconBgColors[index]
                        ? `--icon-bg: ${cardIconBgColors[index]}`
                        : undefined
                    }
                  >
                    {card.iconOrImage?.type === 'icon' &&
                      card.iconOrImage.icon?.name && (
                        <Icon name={card.iconOrImage.icon.name} is:inline />
                      )}
                  </div>
                )}
              </div>
              <p class="experience-accordion__description">
                {card.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* ========================================
     BASE SECTION STYLES
     ======================================== */
  .experience-section {
    padding: var(--space-3xl) 0;
    background: var(--experience-bg, var(--color-background, #ffffff));
    overflow: visible;
  }

  .experience-section__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-lg, 2rem);
  }

  /* ========================================
     HEADER STYLES
     ======================================== */
  .experience-section__header {
    text-align: center;
    margin-block-end: var(--space-md, 2rem);
  }

  .experience-section__title {
    font-family: var(--font-heading, Georgia, serif);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 400;
    color: var(--color-accent);
    margin: 0 0 var(--space-md, 1rem) 0;
    line-height: 1.2;
  }

  .experience-section__description {
    font-size: var(--font-size-lg, 1.125rem);
    color: var(--experience-desc-color, var(--color-text-muted, #94877c));
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ========================================
     DESKTOP: ORBITAL LAYOUT
     ======================================== */
  .experience-orbital {
    --circle-size: clamp(300px, 35vw, 420px);
    --orbit-gap: 60px; /* Gap between circle edge and badge center */

    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    /* Height = circle + orbit on all sides + padding for badges */
    /* Reduced height as requested */
    min-height: 700px;
    padding: 0 0 var(--space-lg) 0;
  }

  /* Central circle container - absolutely centered */
  .experience-orbital__center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    /* Visible immediately */
    opacity: 1;
  }

  .experience-orbital__circle {
    width: var(--circle-size);
    height: var(--circle-size);
    border-radius: 50%;
    background: radial-gradient(
      circle at 50% 50%,
      color-mix(
          in srgb,
          var(--experience-circle-bg, var(--color-background)) 12%,
          white
        )
        0%,
      color-mix(
          in srgb,
          var(--experience-circle-bg, var(--color-background)) 6%,
          white
        )
        60%,
      transparent 100%
    );
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: none;
    box-shadow:
      0 0 80px
        color-mix(
          in srgb,
          var(--experience-circle-bg, var(--color-background)) 12%,
          transparent
        ),
      0 0 160px
        color-mix(
          in srgb,
          var(--experience-circle-bg, var(--color-background)) 6%,
          transparent
        );
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
    overflow: visible;
    /* Faded edges using radial gradient mask */
    mask-image: radial-gradient(
      ellipse 100% 100% at center,
      black 50%,
      rgba(0, 0, 0, 0.5) 70%,
      transparent 100%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 100% 100% at center,
      black 50%,
      rgba(0, 0, 0, 0.5) 70%,
      transparent 100%
    );
    animation: circle-float-breathe 4s ease-in-out infinite;
  }

  /* New Ripple effect - behind circle */
  .experience-orbital__ripples {
    /* ==================================================================
       RIPPLE CONFIGURATION
       Change these variables to tweak the animation
       ================================================================== */
    --ripple-color: var(--color-accent); /* Color of the rings */
    --ripple-gap: 2s; /* Time between each ripple */
    --ripple-duration: calc(
      var(--ripple-gap) * 3
    ); /* Total duration (gap * 3 ripples) */

    position: absolute;
    top: 50%;
    left: 50%;
    width: var(--circle-size);
    height: var(--circle-size);
    transform: translate(-50%, -50%);
    z-index: 0; /* Behind circle (which is z-index: 1) */
    pointer-events: none;
  }

  .experience-orbital__ripples span {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 50%;
    border: 1px solid var(--ripple-color);
    opacity: 0;
    animation: water-ripple var(--ripple-duration) linear infinite;
  }

  /* Stagger the ripples using the gap variable */
  .experience-orbital__ripples span:nth-child(1) {
    animation-delay: 0s;
  }
  .experience-orbital__ripples span:nth-child(2) {
    animation-delay: var(--ripple-gap);
  }
  .experience-orbital__ripples span:nth-child(3) {
    animation-delay: calc(var(--ripple-gap) * 2);
  }

  @keyframes circle-float-breathe {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-8px) scale(1.02);
    }
  }

  @keyframes water-ripple {
    0% {
      transform: scale(0.8);
      opacity: 0;
      border-width: 3px;
    }
    15% {
      opacity: 0.5;
    }
    /* Fade out at 80% - "long but not as long as before" */
    80% {
      opacity: 0;
      border-width: 0px;
    }
    100% {
      transform: scale(2.2);
      opacity: 0;
      border-width: 0px;
    }
  }

  /* 
     PAUSE ANIMATIONS ON HOVER 
     When the .is-paused class is added to the container (via JS on badge hover),
     stop the ripples and the breathing.
  */
  :global(.experience-orbital.is-paused) .experience-orbital__ripples span,
  :global(.experience-orbital.is-paused) .experience-orbital__circle {
    animation-play-state: paused !important;
  }

  .experience-orbital__circle-inner {
    width: 85%;
    height: 85%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  /* Default content shown when no item is hovered */
  .experience-orbital__default {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-lg);
    padding: var(--space-lg);
    opacity: 0;
    /* transform: scale(0.95); <-- Removed to prevent "layout shift" feeling */
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .experience-orbital__default[data-active='true'] {
    opacity: 1;
    /* transform: scale(1); */
  }

  .experience-orbital__default-title {
    font-family: Georgia, 'Times New Roman', serif;
    font-size: clamp(1.5rem, 2vw, 2rem);
    font-weight: 600;
    color: var(--color-text-primary, #1a1a1a);
    margin: 0 0 0.5rem 0;
    text-align: center;
  }

  .experience-orbital__default-text {
    font-family: var(--font-heading, Georgia, serif);
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    color: var(--color-text-muted, #666);
    font-style: italic;
    margin: 0;
  }

  /* Description content inside circle */
  .experience-orbital__description {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-xl);
    padding: var(--space-xl);
    opacity: 0;
    /* transform: scale(0.95); <-- Removed to prevent "layout shift" feeling */
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .experience-orbital__description[data-active='true'] {
    opacity: 1;
    /* transform: scale(1); */
    pointer-events: auto;
  }

  .experience-orbital__desc-number {
    font-family: var(--font-heading, Georgia, serif);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 400;
    color: var(--color-accent);
    line-height: 1;
    margin-bottom: var(--space-xs);
  }

  .experience-orbital__desc-title {
    font-family: var(--font-heading, Georgia, serif);
    font-size: clamp(1.25rem, 2vw, 1.75rem);
    font-weight: 500;
    color: var(--experience-circle-text-color);
    margin: 0 0 var(--space-sm) 0;
    line-height: 1.2;
  }

  .experience-orbital__desc-text {
    font-size: clamp(0.875rem, 1.2vw, 1rem);
    color: var(--experience-circle-text-color);
    line-height: 1.5;
    margin: 0;
    max-width: 90%;
  }

  /* ========================================
     BADGES - Initial horizontal row
     ======================================== */
  .experience-orbital__badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-sm);
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--space-md);
    z-index: 10;
  }

  /* Individual badge - refined pill styling */
  .experience-orbital__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);

    background: color-mix(
      in srgb,
      var(--experience-badge-bg-color, var(--color-background)) 8%,
      white
    );
    border: 1px solid
      var(--experience-badge-border-color, var(--color-background));
    border-radius: 100px; /* Pill shape */
    cursor: pointer;
    white-space: nowrap;
    will-change: transform;

    box-shadow:
      0 2px 8px rgba(0, 0, 0, 0.04),
      0 4px 16px rgba(0, 0, 0, 0.02);

    transition:
      transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1),
      border-color 0.3s ease,
      box-shadow 0.3s ease,
      background 0.3s ease;
  }

  .experience-orbital__badge:hover {
    border-color: var(--experience-badge-border-color, var(--color-background));
    box-shadow:
      0 4px 12px
        color-mix(
          in srgb,
          var(--experience-badge-border-color, var(--color-background)) 15%,
          transparent
        ),
      0 8px 24px
        color-mix(
          in srgb,
          var(--experience-badge-border-color, var(--color-background)) 8%,
          transparent
        );
  }

  .experience-orbital__badge[data-active='true'] {
    border-color: var(--experience-badge-border-color, var(--color-background));
    background: color-mix(
      in srgb,
      var(--experience-badge-bg-color, var(--color-background)) 8%,
      white
    );
    box-shadow:
      0 4px 16px
        color-mix(
          in srgb,
          var(--experience-badge-border-color, var(--color-background)) 20%,
          transparent
        ),
      0 8px 32px
        color-mix(
          in srgb,
          var(--experience-badge-border-color, var(--color-background)) 10%,
          transparent
        );
  }

  .experience-orbital__badge:focus-visible {
    outline: 2px solid
      var(--experience-badge-border-color, var(--color-background));
    outline-offset: 3px;
  }

  .experience-orbital__badge-number {
    font-family: var(--font-heading, Georgia, serif);
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    font-weight: 400;
    color: var(--color-accent);
    line-height: 1;
  }

  .experience-orbital__badge-divider {
    width: 1px;
    height: 1.2em;
    background: color-mix(
      in srgb,
      var(--color-text-muted, #666) 30%,
      transparent
    );
  }

  .experience-orbital__badge-title {
    font-family: var(--font-sans, system-ui);
    font-size: clamp(1rem, 1.5vw, 1.3rem);
    font-weight: 600;
    color: var(--experience-badge-text-color);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1;
    padding-top: 2px;
  }

  /* ========================================
     MOBILE: ACCORDION LAYOUT
     Hidden by default on desktop (>900px)
     ======================================== */
  .experience-accordion {
    display: none !important;
  }

  @media (max-width: 900px) {
    .experience-accordion {
      display: block !important;
    }
  }

  .experience-accordion__item {
    border-bottom: 1px solid rgba(148, 135, 124, 0.2);
  }

  .experience-accordion__item:first-child {
    border-top: 1px solid rgba(148, 135, 124, 0.2);
  }

  .experience-accordion__header {
    display: flex;
    align-items: baseline;
    width: 100%;
    padding: var(--space-lg, 1.5rem) 0;
    border: none;
    background: transparent;
    cursor: pointer;
    text-align: left;
  }

  .experience-accordion__title {
    font-family: var(--font-serif, Georgia, serif);
    font-size: clamp(1.5rem, 6vw, 2rem);
    font-weight: 400;
    color: var(--color-text-muted, #94877c);
    flex: 1;
    transition: color 0.3s ease;
    text-align: left;
  }

  .experience-accordion__item[data-active='true'] .experience-accordion__title {
    color: var(--color-text, #2b180a);
  }

  .experience-accordion__number {
    font-family: var(--font-serif, Georgia, serif);
    font-size: clamp(1.5rem, 6vw, 2rem);
    font-weight: 400;
    color: var(--color-text-muted, #94877c);
    transition: color 0.3s ease;
    margin-right: var(--space-sm, 0.5rem);
  }

  .experience-accordion__item[data-active='true']
    .experience-accordion__number {
    color: var(--color-text, #2b180a);
  }

  .experience-accordion__icon {
    font-size: 1.5rem;
    color: var(--color-text-muted, #94877c);
    transition: transform 0.3s ease;
    margin-left: var(--space-md, 1rem);
  }

  .experience-accordion__item[data-active='true'] .experience-accordion__icon {
    transform: rotate(45deg);
  }

  .experience-accordion__content {
