<script>
  import { setupAnimationLifecycle, createFadeIn, gsap } from '@lib/animation';

  setupAnimationLifecycle(() => {
    // ========================================
    // DESKTOP: Badge hover-based switching
    // ========================================
    const badges = document.querySelectorAll('.experience-orbital__badge');
    const descriptions = document.querySelectorAll(
      '.experience-orbital__description'
    );
    const defaultContent = document.querySelector(
      '.experience-orbital__default'
    );
    const orbitalSection = document.querySelector('.experience-orbital');
    const circleCenter = document.querySelector('.experience-orbital__center');

    function setActiveBadge(index: number | null) {
      // Update default content visibility
      if (defaultContent) {
        defaultContent.setAttribute('data-active', String(index === null));
      }

      // Update badges
      badges.forEach((badge, i) => {
        const isActive = index !== null && i === index;
        badge.setAttribute('data-active', String(isActive));
        badge.setAttribute('aria-pressed', String(isActive));
      });

      // Update descriptions in center circle
      descriptions.forEach((desc, i) => {
        const isActive = index !== null && i === index;
        desc.setAttribute('data-active', String(isActive));
      });
    }

    // Desktop: Hover to switch (mouseenter for immediate response)
    badges.forEach((badge, index) => {
      badge.addEventListener('mouseenter', () => setActiveBadge(index));
    });

    // Reset to default when mouse leaves the badges area
    const badgesContainer = document.querySelector(
      '.experience-orbital__badges'
    );
    badgesContainer?.addEventListener('mouseleave', () => setActiveBadge(null));

    // Desktop/Mobile: Click also works (for touch devices and accessibility)
    badges.forEach((badge, index) => {
      badge.addEventListener('click', () => setActiveBadge(index));
    });

    // Keyboard navigation for badges
    badges.forEach((badge, index) => {
      badge.addEventListener('keydown', ((e: KeyboardEvent) => {
        const itemCount = badges.length;
        let nextIndex = index;

        if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
          e.preventDefault();
          nextIndex = (index + 1) % itemCount;
        } else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
          e.preventDefault();
          nextIndex = (index - 1 + itemCount) % itemCount;
        }

        if (nextIndex !== index) {
          setActiveBadge(nextIndex);
          (badges[nextIndex] as HTMLElement).focus();
        }
      }) as EventListener);
    });
    // ========================================
    // DESKTOP: Magnetic repulsion hover effect (GSAP-compatible)
    // ========================================
    badges.forEach((badge) => {
      // Store the base position set by GSAP
      let baseX = 0;
      let baseY = 0;
      let rafId: number | null = null;
      let lastMouseX = 0;
      let lastMouseY = 0;

      badge.addEventListener('mouseenter', () => {
        // Pause circle animations
        orbitalSection?.classList.add('is-paused');

        // Capture current GSAP position as base
        const gsapTransform = gsap.getProperty(badge, 'x');
        const gsapTransformY = gsap.getProperty(badge, 'y');
        baseX = typeof gsapTransform === 'number' ? gsapTransform : 0;
        baseY = typeof gsapTransformY === 'number' ? gsapTransformY : 0;
      });

      badge.addEventListener('mousemove', ((e: MouseEvent) => {
        // Store latest mouse position
        lastMouseX = e.clientX;
        lastMouseY = e.clientY;

        // Throttle with RAF - only schedule if not already scheduled
        if (rafId !== null) return;

        rafId = requestAnimationFrame(() => {
          const rect = badge.getBoundingClientRect();
          const badgeCenterX = rect.left + rect.width / 2;
          const badgeCenterY = rect.top + rect.height / 2;

          // Calculate direction from cursor to badge center
          const deltaX = badgeCenterX - lastMouseX;
          const deltaY = badgeCenterY - lastMouseY;
          const distance = Math.sqrt(deltaX * deltaX + deltaY * deltaY);

          if (distance > 0) {
            // Normalize and apply opposite repulsion
            // The user asked for "repulsion", originally it was pushing AWAY.
            // "badge moved to the opposite direction where it was being hovered" = repulsion.
            const pushStrength = 8;
            const pushX = (deltaX / distance) * pushStrength;
            const pushY = (deltaY / distance) * pushStrength;

            // Animate using GSAP with relative positioning
            gsap.to(badge, {
              x: baseX + pushX,
              y: baseY + pushY,
              duration: 0.2,
              ease: 'power2.out',
              overwrite: true,
            });
          }

          rafId = null; // Reset for next frame
        });
      }) as EventListener);

      // Reset to base position on mouse leave
      badge.addEventListener('mouseleave', () => {
        // Resume circle animations
        orbitalSection?.classList.remove('is-paused');

        // Cancel any pending RAF
        if (rafId !== null) {
          cancelAnimationFrame(rafId);
          rafId = null;
        }

        gsap.to(badge, {
          x: baseX,
          y: baseY,
          duration: 0.3,
          ease: 'back.out(1.7)',
          overwrite: true,
        });
      });
    });

    // ========================================
    // DESKTOP: GSAP Scroll Animation - Badge to Orbital (Pinned)
    // ========================================
    if (
      window.innerWidth > 900 &&
      orbitalSection &&
      circleCenter &&
      badges.length > 0
    ) {
      const sectionRect = orbitalSection.getBoundingClientRect();
      const sectionHeight = (orbitalSection as HTMLElement).offsetHeight;
      const sectionCenterY = sectionHeight / 2;

      // Store initial badge positions and dimensions
      const badgeData: {
        x: number;
        y: number;
        width: number;
        height: number;
      }[] = [];
      badges.forEach((badge) => {
        const rect = badge.getBoundingClientRect();
        badgeData.push({
          x:
            rect.left +
            rect.width / 2 -
            sectionRect.left -
            sectionRect.width / 2,
          y: rect.top + rect.height / 2 - sectionRect.top,
          width: rect.width,
          height: rect.height,
        });
      });

      // Get circle radius and desired gap from circle edge to badge edge
      const computedStyle = getComputedStyle(orbitalSection);
      const circleSize =
        parseFloat(computedStyle.getPropertyValue('--circle-size')) || 380;
      const circleRadius = circleSize / 2;
      // Gap settings - all edge-to-edge measurements
      const gapTop = 70; // Gap for top badge (badge bottom to circle top)
      const gapSide = 50; // Gap for side badges (badge inner edge to circle side)
      const gapBottom = 25; // Gap for bottom badges (corner to circle edge)
      const sideY = -50; // Side badges slightly above center
      const bottomX = 200; // Fixed X position for bottom badges

      // Get widths for alignment calculation
      const rightSideWidth = badgeData[1]?.width ?? 0; // Badge 1 (right side)
      const leftSideWidth = badgeData[4]?.width ?? 0; // Badge 4 (left side)

      // Calculate X positions once for alignment
      const rightX = circleRadius + gapSide + rightSideWidth / 2;
      const leftX = -(circleRadius + gapSide + leftSideWidth / 2);

      // Manual positioning with vertical alignment
      // Layout:
      //        [0 Top]
      //   [4]    ○    [1]   ← side badges slightly above center
      //   [3]         [2]   ← bottom badges below circle (aligned X with sides)
      badges.forEach((badge, index) => {
        const badgeHeight = badgeData[index]?.height ?? 0;

        let finalX: number;
        let finalY: number;

        if (index === 0) {
          // Top badge: centered
          finalX = 0;
          finalY = -(circleRadius + gapTop + badgeHeight / 2) + sectionCenterY;
        } else if (index === 1) {
          // Right side badge
          finalX = rightX;
          finalY = sideY + sectionCenterY;
        } else if (index === 2) {
          // Right bottom badge - corner-based gap calculation
          const badgeWidth = badgeData[index]?.width ?? 0;
          finalX = bottomX;
          // Corner X position (top-left corner for right badge)
          const cornerX = bottomX - badgeWidth / 2;
          // Calculate Y so corner is gapBottom from circle edge
          const distanceFromCenter = circleRadius + gapBottom;
          const yOffset = Math.sqrt(
            distanceFromCenter * distanceFromCenter - cornerX * cornerX
          );
          finalY = sectionCenterY + badgeHeight / 2 + yOffset;
        } else if (index === 3) {
          // Left bottom badge - corner-based gap calculation
          const badgeWidth = badgeData[index]?.width ?? 0;
          finalX = -bottomX;
          // Corner X position (top-right corner for left badge)
          const cornerX = -bottomX + badgeWidth / 2;
          // Calculate Y so corner is gapBottom from circle edge
          const distanceFromCenter = circleRadius + gapBottom;
          const yOffset = Math.sqrt(
            distanceFromCenter * distanceFromCenter - cornerX * cornerX
          );
          finalY = sectionCenterY + badgeHeight / 2 + yOffset;
        } else {
          // Left side badge (index 4)
          finalX = leftX;
          finalY = sideY + sectionCenterY;
        }

        // Set FINAL absolute position immediately
        // User request: "have them be at their position from the very beginning... no animation on scrolling"
        gsap.set(badge, {
          position: 'absolute',
          left: '50%',
          top: 0,
          x: finalX,
          y: finalY,
          xPercent: -50,
        });
      });
    }

    // ========================================
    // MOBILE: Accordion functionality
    // ========================================
    const accordionItems = document.querySelectorAll(
      '.experience-accordion__item'
    );
    const accordionHeaders = document.querySelectorAll(
      '.experience-accordion__header'
    );

    function setActiveAccordion(index: number) {
      accordionItems.forEach((item, i) => {
        const isActive = i === index;
        const wasActive = item.getAttribute('data-active') === 'true';

        // Toggle: if clicking the already active item, close it
        if (i === index && wasActive) {
          item.setAttribute('data-active', 'false');
          item
            .querySelector('.experience-accordion__header')
            ?.setAttribute('aria-expanded', 'false');
        } else {
          item.setAttribute('data-active', String(isActive));
          item
            .querySelector('.experience-accordion__header')
            ?.setAttribute('aria-expanded', String(isActive));
        }
      });
    }

    accordionHeaders.forEach((header, index) => {
      header.addEventListener('click', () => setActiveAccordion(index));
    });

    // ========================================
    // GSAP: Entrance animations
    // ========================================
    // Fade in the header
    createFadeIn('.experience-section__header', { y: 30 });

    // Mobile: Staggered fade in for accordion items
    if (window.innerWidth <= 900) {
      createFadeIn('.experience-accordion__item', { y: 20, stagger: 0.08 });
    }
  });
</script>
