          btn.addEventListener('click', (e) => {
            e.stopPropagation();
            const targetRotation = -sliceAngle * index;

            let diff = targetRotation - (wheelRotation % 360);
            while (diff > 180) diff -= 360;
            while (diff < -180) diff += 360;
            const finalRotation = wheelRotation + diff;

            // Reveal content immediately
            setActiveWheelItem(index);

            // Animate wheel rotation (badges stay tangent, rotate with wheel)
            gsap.to(wheel, {
              rotation: finalRotation,
              duration: 1.8,
              ease: 'elastic.out(0.6, 0.5)',
              onComplete: () => {
                wheelRotation = finalRotation;
              },
            });
          });
        });
      }
    }

    // ========================================
    // GSAP: Entrance animations
    // ========================================
    // Fade in the header
    createFadeIn('.experience-section__header', { y: 30 });

    // Mobile: Fade in wheel (use matchMedia for iOS compatibility)
    if (window.matchMedia('(max-width: 489px)').matches) {
      createFadeIn('.experience-wheel__viewport', { y: 30 });
    }
  });
</script>
