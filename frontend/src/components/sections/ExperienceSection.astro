---
import { resolveColorSelection } from '@lib/sanity/colorResolver';
import { urlForImage } from '@lib/sanity/image';
import { sanityClient as client } from 'sanity:client';
import { siteSettingsQuery } from '@lib/sanity/queries';

interface IconData {
  name: string;
}

interface ImageData {
  asset: any;
  alt?: string;
}

interface IconOrImage {
  type: 'icon' | 'image';
  icon?: IconData;
  image?: ImageData;
}

interface ExperienceCard {
  _key: string;
  number: string;
  title: string;
  description: string;
  iconOrImage: IconOrImage;
  iconBackgroundColorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  iconBackgroundColorShade?: number;
  iconBackgroundCustomColor?: ColorData;
}

interface ColorData {
  label?: string;
  value: string;
}

interface SanityImageAsset {
  _id: string;
  url: string;
  metadata?: {
    lqip?: string;
    dimensions?: {
      width: number;
      height: number;
      aspectRatio: number;
    };
  };
}

interface SanityImage {
  asset?: SanityImageAsset;
  alt?: string;
  seoFilename?: string;
  hotspot?: {
    x: number;
    y: number;
  };
  crop?: {
    top: number;
    bottom: number;
    left: number;
    right: number;
  };
}

interface GradientColorData {
  colorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  shade?: number;
  customColor?: ColorData;
}

interface GradientData {
  direction?: string;
  startColor?: GradientColorData;
  endColor?: GradientColorData;
}

interface Props {
  title: string;
  description?: string;
  cards: ExperienceCard[];
  // Background type settings
  backgroundType?: 'image' | 'color';
  backgroundImage?: SanityImage;
  colorMode?: 'solid' | 'gradient';
  gradient?: GradientData;
  // Solid color settings
  descriptionColor?: 'base' | 'muted' | 'contrast';
  backgroundColorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  backgroundColorShade?: number;
  backgroundCustomColor?: ColorData;
  // Badge colors (with shade)
  badgeColorType?: 'default' | 'primary' | 'secondary' | 'accent' | 'custom';
  badgeColorShade?: number;
  badgeCustomColor?: ColorData;
  badgeBackgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  badgeBackgroundColorShade?: number;
  badgeBackgroundCustomColor?: ColorData;
  badgeTextColor?: 'base' | 'muted' | 'contrast';
  // Circle background color (with shade)
  circleBackgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  circleBackgroundColorShade?: number;
  circleBackgroundCustomColor?: ColorData;
  circleTextColor?: 'base' | 'muted' | 'contrast';
  cardDescriptionColor?: 'base' | 'muted' | 'contrast';
}

const props = Astro.props as any;

const {
  title,
  description,
  cards,
  backgroundType = 'color',
  backgroundImage,
  colorMode = 'solid',
  gradient,
  descriptionColor = 'base',
  backgroundColorType = 'default',
  backgroundColorShade = 0,
  backgroundCustomColor,
  cardDescriptionColor = 'base',
} = Astro.props;

// Use new color fields directly
const badgeColorType = props.badgeColorType ?? 'default';
const badgeColorShade = props.badgeColorShade ?? 0;
const badgeCustomColor = props.badgeCustomColor;
const badgeBackgroundColorType = props.badgeBackgroundColorType ?? 'default';
const badgeBackgroundColorShade = props.badgeBackgroundColorShade ?? 0;
const badgeBackgroundCustomColor = props.badgeBackgroundCustomColor;
const badgeTextColor = props.badgeTextColor ?? 'base';
const circleBackgroundColorType = props.circleBackgroundColorType ?? 'default';
const circleBackgroundColorShade = props.circleBackgroundColorShade ?? 0;
const circleBackgroundCustomColor = props.circleBackgroundCustomColor;
const circleTextColor = props.circleTextColor ?? 'base';

// Fetch site settings for colors
const settings = await client.fetch(siteSettingsQuery);
const siteColors = settings?.colors;

// Determine background mode
const hasBackgroundImage = backgroundType === 'image' && backgroundImage?.asset;
const isGradient = backgroundType === 'color' && colorMode === 'gradient';
const isSolidColor = backgroundType === 'color' && colorMode !== 'gradient';

// Generate background image URL if type is 'image'
const bgImageUrl = hasBackgroundImage
  ? urlForImage(backgroundImage).width(1920).height(1080).auto('format').url()
  : null;
const bgImageLqip = hasBackgroundImage
  ? backgroundImage?.asset?.metadata?.lqip
  : null;
const bgImageAlt = backgroundImage?.alt || '';
const bgHotspot = backgroundImage?.hotspot;
const bgHotspotX = bgHotspot ? `${bgHotspot.x * 100}%` : '50%';
const bgHotspotY = bgHotspot ? `${bgHotspot.y * 100}%` : '50%';

// Resolve gradient colors
let gradientCss: string | null = null;
if (isGradient && gradient) {
  const direction = gradient.direction || '135deg';
  const startColor = resolveColorSelection(gradient.startColor, siteColors);
  const endColor = resolveColorSelection(gradient.endColor, siteColors);
  gradientCss = `linear-gradient(${direction}, ${startColor}, ${endColor})`;
}

// Resolve background color (null if default)
const backgroundColor =
  isSolidColor && (backgroundColorType === 'default' || !backgroundColorType)
    ? null
    : isSolidColor
      ? resolveColorSelection(
          {
            colorType: backgroundColorType,
            shade: backgroundColorShade,
            customColor: backgroundCustomColor,
          },
          siteColors
        )
      : null;

// Resolve badge border color (with shade) - null if default
const badgeBorderColor =
  badgeColorType === 'default' || !badgeColorType
    ? null
    : resolveColorSelection(
        {
          colorType: badgeColorType,
          shade: badgeColorShade,
          customColor: badgeCustomColor,
        },
        siteColors
      );

// Resolve badge background color (with shade) - null if default
const badgeBackgroundColor =
  badgeBackgroundColorType === 'default' || !badgeBackgroundColorType
    ? null
    : resolveColorSelection(
        {
          colorType: badgeBackgroundColorType,
          shade: badgeBackgroundColorShade,
          customColor: badgeBackgroundCustomColor,
        },
        siteColors
      );

// Resolve circle background color (with shade) - null if default
const circleBackgroundColor =
  circleBackgroundColorType === 'default' || !circleBackgroundColorType
    ? null
    : resolveColorSelection(
        {
          colorType: circleBackgroundColorType,
          shade: circleBackgroundColorShade,
          customColor: circleBackgroundCustomColor,
        },
        siteColors
      );

// Helper to resolve text color using centralized CSS variables
const getTextColorVar = (color: 'base' | 'muted' | 'contrast'): string => {
  switch (color) {
    case 'contrast':
      return 'var(--color-text-contrast)';
    case 'muted':
      return 'var(--color-text-muted)';
    default:
      return 'var(--color-text)';
  }
};

// Define CSS variables for dynamic colors
const cssVars: Record<string, string> = {
  '--experience-desc-color': getTextColorVar(descriptionColor),
  '--experience-badge-text-color': getTextColorVar(badgeTextColor),
  '--experience-circle-text-color': getTextColorVar(circleTextColor),
  '--experience-card-desc-color': getTextColorVar(cardDescriptionColor),
};

// Only set if not default
if (badgeBorderColor) {
  cssVars['--experience-badge-border-color'] = badgeBorderColor;
}

if (badgeBackgroundColor) {
  cssVars['--experience-badge-bg-color'] = badgeBackgroundColor;
}

if (circleBackgroundColor) {
  cssVars['--experience-circle-bg'] = circleBackgroundColor;
}

// Set background based on type
if (gradientCss) {
  cssVars['--experience-bg'] = gradientCss;
} else if (backgroundColor) {
  cssVars['--experience-bg'] = backgroundColor;
}

const cssVarsString = Object.entries(cssVars)
  .map(([key, value]) => `${key}: ${value}`)
  .join('; ');
---

<section
  class:list={[
    'experience-section',
    { 'experience-section--has-bg-image': hasBackgroundImage },
  ]}
  style={`${cssVarsString}; --item-count: ${cards.length}`}
>
  {/* Background Image Layer */}
  {
    hasBackgroundImage && bgImageUrl && (
      <div class="experience-section__bg">
        <div
          class="experience-section__bg-blur"
          style={bgImageLqip ? `background-image: url(${bgImageLqip})` : ''}
        />
        <img
          src={bgImageUrl}
          alt={bgImageAlt}
          class="experience-section__bg-image"
          style={`object-position: ${bgHotspotX} ${bgHotspotY}`}
          loading="eager"
          decoding="async"
        />
        <div class="experience-section__bg-overlay" />
        <div class="experience-section__bg-grain" aria-hidden="true" />
      </div>
    )
  }
  <div class="experience-section__container">
    <!-- Header -->
    <header class="experience-section__header">
      <h2 class="experience-section__title">{title}</h2>
      {
        description && (
          <p class="experience-section__description">{description}</p>
        )
      }
    </header>

    <!-- Desktop: Orbital layout with badges -->
    <div class="experience-orbital">
      <!-- Badges row - starts here, animates to orbital positions -->
      <nav
        class="experience-orbital__badges"
        aria-label="Experience navigation"
      >
        {
          cards.map((card, index) => (
            <button
              type="button"
              class="experience-orbital__badge"
              data-index={index}
              data-active="false"
              aria-pressed="false"
            >
              <span class="experience-orbital__badge-number">
                {card.number}
              </span>
              <span class="experience-orbital__badge-divider" />
              <span class="experience-orbital__badge-title">{card.title}</span>
            </button>
          ))
        }
      </nav>

      <!-- Central circle with description - revealed on scroll -->
      <div class="experience-orbital__center">
        <div class="experience-orbital__ripples">
          <span></span>
          <span></span>
          <span></span>
        </div>
        <div class="experience-orbital__circle">
          <div class="experience-orbital__circle-inner">
            <!-- Default content when no item is hovered -->
            <div class="experience-orbital__default" data-active="true">
              <p class="experience-orbital__default-text">
                Hover the badges to explore
              </p>
            </div>
            {
              cards.map((card, index) => (
                <div
                  class="experience-orbital__description"
                  data-index={index}
                  data-active="false"
                >
                  <span class="experience-orbital__desc-number">
                    {card.number}
                  </span>
                  <h3 class="experience-orbital__desc-title">{card.title}</h3>
                  <p class="experience-orbital__desc-text">
                    {card.description}
                  </p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile: Wheel Carousel Layout -->
    <div class="experience-wheel" aria-label="Experience wheel navigation">
      <!-- Container that clips the wheel -->
      <div class="experience-wheel__viewport">
        <!-- Ripples behind circle -->
        <div class="experience-wheel__ripples">
          <span></span>
          <span></span>
          <span></span>
        </div>

        <!-- Triangle indicator pointing to active badge -->
        <div class="experience-wheel__indicator"></div>

        <!-- Swipe hint - single curved line with arrowheads on both ends -->
        <svg
          class="experience-wheel__swipe-hint"
          viewBox="0 0 100 24"
          fill="none"
        >
          <!-- Curved line following circle curvature -->
          <path
            d="M10 18 Q50 2, 90 18"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            fill="none"></path>
          <!-- Left arrowhead -->
          <path
            d="M10 18 L16 12 M10 18 L18 20"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            fill="none"></path>
          <!-- Right arrowhead -->
          <path
            d="M90 18 L84 12 M90 18 L82 20"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            fill="none"></path>
        </svg>

        <!-- Central circle with content (static, doesn't rotate) -->
        <div class="experience-wheel__circle">
          <div class="experience-wheel__circle-inner">
            {
              cards.map((card, index) => (
                <div
                  class="experience-wheel__content"
                  data-index={index}
                  data-active={index === 0 ? 'true' : 'false'}
                >
                  <span class="experience-wheel__content-number">
                    {card.number}
                  </span>
                  <h3 class="experience-wheel__content-title">{card.title}</h3>
                  <p class="experience-wheel__content-description">
                    {card.description}
                  </p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- HTML Wheel with positioned badges (iOS Safari compatible) -->
        <div class="experience-wheel__badges-container">
          <div class="experience-wheel__wheel">
            {
              cards.map((card, index) => (
                <button
                  type="button"
                  class="experience-wheel__badge"
                  data-index={index}
                  data-active={index === 0 ? 'true' : 'false'}
                  style={`--badge-index: ${index}`}
                >
                  <span class="experience-wheel__badge-number">
                    {card.number}
                  </span>
                  <span class="experience-wheel__badge-divider" />
                  <span class="experience-wheel__badge-title">
                    {card.title}
                  </span>
                </button>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* ========================================
     BASE SECTION STYLES
     ======================================== */
  .experience-section {
    position: relative;
    padding: var(--space-3xl) 0;
    background: var(--experience-bg, var(--color-background, #ffffff));
    overflow: visible;
  }

  /* ========================================
     BACKGROUND IMAGE STYLES
     ======================================== */
  .experience-section__bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  /* LQIP blur placeholder - fades out when main image loads */
  .experience-section__bg-blur {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    filter: blur(20px);
    transform: scale(1.1);
    opacity: 1;
    transition: opacity 0.6s ease-out;
  }

  .experience-section__bg-blur.loaded {
    opacity: 0;
  }

  /* Main background image with Ken Burns effect */
  .experience-section__bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.6s ease-out;
    animation: experience-ken-burns 25s ease-in-out infinite alternate;
  }

  .experience-section__bg-image.loaded {
    opacity: 1;
  }

  @keyframes experience-ken-burns {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.08);
    }
  }

  /* Dark overlay for text legibility */
  .experience-section__bg-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.35) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.6) 100%
    );
  }

  /* Subtle grain texture for depth */
  .experience-section__bg-grain {
    position: absolute;
    inset: 0;
    opacity: 0.08;
    pointer-events: none;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
  }

  /* When background image is present, ensure content is above */
  .experience-section--has-bg-image .experience-section__container {
    position: relative;
    z-index: 1;
  }

  /* Hide background color when image is present */
  .experience-section--has-bg-image {
    background: transparent;
  }

  /* Reduce motion: disable Ken Burns animation */
  @media (prefers-reduced-motion: reduce) {
    .experience-section__bg-image {
      animation: none;
    }
  }

  .experience-section__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-lg, 2rem);
  }

  /* ========================================
     HEADER STYLES
     ======================================== */
  .experience-section__header {
    text-align: center;
    margin-block-end: var(--space-md, 2rem);
  }

  .experience-section__title {
    font-family: var(--font-heading, Georgia, serif);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 400;
    color: var(--color-accent);
    margin: 0 0 var(--space-md, 1rem) 0;
    line-height: 1.2;
  }

  .experience-section__description {
    font-size: var(--font-size-lg, 1.125rem);
    color: var(--experience-desc-color, var(--color-text-muted, #94877c));
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ========================================
     DESKTOP: ORBITAL LAYOUT
     ======================================== */
  .experience-orbital {
    --circle-size: clamp(300px, 35vw, 420px);
    --orbit-gap: 60px; /* Gap between circle edge and badge center */

    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    /* Height = circle + orbit on all sides + padding for badges */
    /* Reduced height as requested */
    min-height: 700px;
    padding: 0 0 var(--space-lg) 0;
  }

  /* Central circle container - absolutely centered */
  .experience-orbital__center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    /* Visible immediately */
    opacity: 1;
  }

  .experience-orbital__circle {
    width: var(--circle-size);
    height: var(--circle-size);
    border-radius: 50%;
    background: radial-gradient(
      circle at 50% 50%,
      var(--experience-circle-bg, var(--color-background)) 0%,
      color-mix(
          in srgb,
          var(--experience-circle-bg, var(--color-background)) 60%,
          transparent
        )
        60%,
      transparent 100%
    );
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: none;
    box-shadow:
      0 0 80px
        color-mix(
          in srgb,
          var(--experience-circle-bg, var(--color-background)) 30%,
          transparent
        ),
      0 0 160px
        color-mix(
          in srgb,
          var(--experience-circle-bg, var(--color-background)) 15%,
          transparent
        );
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
    overflow: visible;
    /* Faded edges using radial gradient mask */
    mask-image: radial-gradient(
      ellipse 100% 100% at center,
      black 50%,
      rgba(0, 0, 0, 0.5) 70%,
      transparent 100%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 100% 100% at center,
      black 50%,
      rgba(0, 0, 0, 0.5) 70%,
      transparent 100%
    );
    animation: circle-float-breathe 4s ease-in-out infinite;
  }

  /* New Ripple effect - behind circle */
  .experience-orbital__ripples {
    /* ==================================================================
       RIPPLE CONFIGURATION
       Change these variables to tweak the animation
       ================================================================== */
    --ripple-color: var(--color-accent); /* Color of the rings */
    --ripple-gap: 2s; /* Time between each ripple */
    --ripple-duration: calc(
      var(--ripple-gap) * 3
    ); /* Total duration (gap * 3 ripples) */

    position: absolute;
    top: 50%;
    left: 50%;
    width: var(--circle-size);
    height: var(--circle-size);
    transform: translate(-50%, -50%);
    z-index: 0; /* Behind circle (which is z-index: 1) */
    pointer-events: none;
  }

  .experience-orbital__ripples span {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 50%;
    border: 1px solid var(--ripple-color);
    opacity: 0;
    animation: water-ripple var(--ripple-duration) linear infinite;
  }

  /* Stagger the ripples using the gap variable */
  .experience-orbital__ripples span:nth-child(1) {
    animation-delay: 0s;
  }
  .experience-orbital__ripples span:nth-child(2) {
    animation-delay: var(--ripple-gap);
  }
  .experience-orbital__ripples span:nth-child(3) {
    animation-delay: calc(var(--ripple-gap) * 2);
  }

  @keyframes circle-float-breathe {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-8px) scale(1.02);
    }
  }

  @keyframes water-ripple {
    0% {
      transform: scale(0.8);
      opacity: 0;
      border-width: 3px;
    }
    15% {
      opacity: 0.5;
    }
    /* Fade out at 80% - "long but not as long as before" */
    80% {
      opacity: 0;
      border-width: 0px;
    }
    100% {
      transform: scale(2.2);
      opacity: 0;
      border-width: 0px;
    }
  }

  /* 
     PAUSE ANIMATIONS ON HOVER 
     When the .is-paused class is added to the container (via JS on badge hover),
     stop the ripples and the breathing.
  */
  :global(.experience-orbital.is-paused) .experience-orbital__ripples span,
  :global(.experience-orbital.is-paused) .experience-orbital__circle {
    animation-play-state: paused !important;
  }

  .experience-orbital__circle-inner {
    width: 85%;
    height: 85%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  /* Default content shown when no item is hovered */
  .experience-orbital__default {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-lg);
    padding: var(--space-lg);
    opacity: 0;
    /* transform: scale(0.95); <-- Removed to prevent "layout shift" feeling */
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .experience-orbital__default[data-active='true'] {
    opacity: 1;
    /* transform: scale(1); */
  }

  .experience-orbital__default-title {
    font-family: Georgia, 'Times New Roman', serif;
    font-size: clamp(1.5rem, 2vw, 2rem);
    font-weight: 600;
    color: var(--color-text-primary, #1a1a1a);
    margin: 0 0 0.5rem 0;
    text-align: center;
  }

  .experience-orbital__default-text {
    font-family: var(--font-heading, Georgia, serif);
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    color: var(--color-text-muted, #666);
    font-style: italic;
    margin: 0;
  }

  /* Description content inside circle */
  .experience-orbital__description {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-xl);
    padding: var(--space-xl);
    opacity: 0;
    /* transform: scale(0.95); <-- Removed to prevent "layout shift" feeling */
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .experience-orbital__description[data-active='true'] {
    opacity: 1;
    /* transform: scale(1); */
    pointer-events: auto;
  }

  .experience-orbital__desc-number {
    font-family: var(--font-heading, Georgia, serif);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 400;
    color: var(--color-accent);
    line-height: 1;
    margin-bottom: var(--space-xs);
  }

  .experience-orbital__desc-title {
    font-family: var(--font-heading, Georgia, serif);
    font-size: clamp(1.25rem, 2vw, 1.75rem);
    font-weight: 500;
    color: var(--experience-circle-text-color);
    margin: 0 0 var(--space-sm) 0;
    line-height: 1.2;
  }

  .experience-orbital__desc-text {
    font-size: clamp(0.875rem, 1.2vw, 1rem);
    color: var(--experience-circle-text-color);
    line-height: 1.5;
    margin: 0;
