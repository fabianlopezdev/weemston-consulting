---
import PortableText from '@components/sanity/PortableText.astro';
import SectionTitle from '@components/ui/SectionTitle.astro';
import { resolveColorSelection } from '@lib/sanity/colorResolver';
import { urlForImage } from '@lib/sanity/image';
import { sanityClient as client } from 'sanity:client';
import { siteSettingsQuery } from '@lib/sanity/queries';

interface ColorData {
  label?: string;
  value: string;
}

interface SanityImageAsset {
  _id: string;
  url: string;
  metadata?: {
    lqip?: string;
    dimensions?: {
      width: number;
      height: number;
      aspectRatio: number;
    };
  };
}

interface SanityImage {
  asset?: SanityImageAsset;
  alt?: string;
  seoFilename?: string;
  hotspot?: {
    x: number;
    y: number;
  };
  crop?: {
    top: number;
    bottom: number;
    left: number;
    right: number;
  };
}

interface GradientColorData {
  colorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  shade?: number;
  customColor?: ColorData;
}

interface GradientData {
  direction?: string;
  startColor?: GradientColorData;
  endColor?: GradientColorData;
}

interface Service {
  _id: string;
  title: string;
  homepageText?: any;
}

interface Props {
  title: string;
  description?: string;
  services: Service[];
  showAllLink?: boolean;
  // Background type settings
  backgroundType?: 'image' | 'color';
  backgroundImage?: SanityImage;
  colorMode?: 'solid' | 'gradient';
  gradient?: GradientData;
  // Solid color settings
  backgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  backgroundColorShade?: number;
  backgroundCustomColor?: ColorData;
  // Card settings
  accentColorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  accentCustomColor?: ColorData;
  // Section title color
  sectionTitleColor?: 'base' | 'contrast';
  // Text color settings
  descriptionTextColor?: 'base' | 'muted' | 'contrast';
  linkTextColor?: 'base' | 'muted' | 'contrast';
  cardTextColor?: 'base' | 'muted' | 'contrast';
  // Card title color settings
  titleColorType?: 'default' | 'primary' | 'secondary' | 'accent' | 'custom';
  titleColorShade?: number;
  titleCustomColor?: ColorData;
}

const {
  title,
  description,
  services,
  showAllLink,
  backgroundType = 'color',
  backgroundImage,
  colorMode = 'solid',
  gradient,
  backgroundColorType = 'default',
  backgroundColorShade = 0,
  backgroundCustomColor,
  accentColorType = 'accent',
  accentCustomColor,
  sectionTitleColor = 'base',
  descriptionTextColor = 'base',
  linkTextColor = 'base',
  cardTextColor = 'base',
  titleColorType = 'default',
  titleColorShade = 0,
  titleCustomColor,
} = Astro.props;

// Fetch site settings for colors
const settings = await client.fetch(siteSettingsQuery);
const siteColors = settings?.colors;

// Determine background mode
const hasBackgroundImage = backgroundType === 'image' && backgroundImage?.asset;
const isGradient = backgroundType === 'color' && colorMode === 'gradient';
const isSolidColor = backgroundType === 'color' && colorMode !== 'gradient';

// Generate background image URL if type is 'image'
const bgImageUrl = hasBackgroundImage
  ? urlForImage(backgroundImage).width(1920).height(1080).auto('format').url()
  : null;
const bgImageLqip = hasBackgroundImage
  ? backgroundImage?.asset?.metadata?.lqip
  : null;
const bgImageAlt = backgroundImage?.alt || '';
const bgHotspot = backgroundImage?.hotspot;
const bgHotspotX = bgHotspot ? `${bgHotspot.x * 100}%` : '50%';
const bgHotspotY = bgHotspot ? `${bgHotspot.y * 100}%` : '50%';

// Resolve gradient colors
let gradientCss: string | null = null;
if (isGradient && gradient) {
  const direction = gradient.direction || '135deg';
  const startColor = resolveColorSelection(gradient.startColor, siteColors);
  const endColor = resolveColorSelection(gradient.endColor, siteColors);
  gradientCss = `linear-gradient(${direction}, ${startColor}, ${endColor})`;
}

// Resolve background color (null if default)
const backgroundColor =
  isSolidColor && (backgroundColorType === 'default' || !backgroundColorType)
    ? null
    : isSolidColor
      ? resolveColorSelection(
          {
            colorType: backgroundColorType,
            shade: backgroundColorShade,
            customColor: backgroundCustomColor,
          },
          siteColors
        )
      : null;

// Resolve accent color (no shade - cards use color-mix for shades)
const accentColor = resolveColorSelection(
  {
    colorType: accentColorType,
    customColor: accentCustomColor,
  },
  siteColors
);

// Resolve card title color (null if default - will use text color)
const titleColor =
  titleColorType === 'default' || !titleColorType
    ? null
    : resolveColorSelection(
        {
          colorType: titleColorType,
          shade: titleColorShade,
          customColor: titleCustomColor,
        },
        siteColors
      );

// Determine effective colors - default to contrast for image backgrounds
const effectiveSectionTitleColor = hasBackgroundImage
  ? 'contrast'
  : sectionTitleColor;
const effectiveDescriptionColor = hasBackgroundImage
  ? 'contrast'
  : descriptionTextColor;
const effectiveLinkColor = hasBackgroundImage ? 'contrast' : linkTextColor;
const effectiveCardTextColor = hasBackgroundImage ? 'contrast' : cardTextColor;

// Map text color value to CSS variable
const getTextColorVar = (color: 'base' | 'muted' | 'contrast'): string => {
  switch (color) {
    case 'contrast':
      return 'var(--color-text-contrast)';
    case 'muted':
      return 'var(--color-text-muted)';
    default:
      return 'var(--color-text)';
  }
};

// Define CSS variables for dynamic colors
const cssVars: Record<string, string> = {
  '--fs-accent': accentColor,
  '--fs-section-title-color':
    effectiveSectionTitleColor === 'contrast'
      ? 'var(--color-text-contrast)'
      : 'var(--color-accent)',
  '--fs-description-color': getTextColorVar(effectiveDescriptionColor),
  '--fs-link-color': getTextColorVar(effectiveLinkColor),
  '--fs-card-text-color': getTextColorVar(effectiveCardTextColor),
};

// Set background based on type
if (gradientCss) {
  cssVars['--fs-bg'] = gradientCss;
} else if (backgroundColor) {
  cssVars['--fs-bg'] = backgroundColor;
}

// Only set title color if not default (otherwise inherits from text color)
if (titleColor) {
  cssVars['--fs-title-color'] = titleColor;
}

const cssVarsString = Object.entries(cssVars)
  .map(([key, value]) => `${key}: ${value}`)
  .join('; ');
---

<section
  class:list={[
    'services-section',
    { 'services-section--has-bg-image': hasBackgroundImage },
  ]}
  style={cssVarsString}
>
  {/* Background Image Layer */}
  {
    hasBackgroundImage && bgImageUrl && (
      <div class="services-section__bg">
        <div
          class="services-section__bg-blur"
          style={bgImageLqip ? `background-image: url(${bgImageLqip})` : ''}
        />
        <img
          src={bgImageUrl}
          alt={bgImageAlt}
          class="services-section__bg-image"
          style={`object-position: ${bgHotspotX} ${bgHotspotY}`}
          loading="eager"
          decoding="async"
        />
        <div class="services-section__bg-overlay" />
        <div class="services-section__bg-grain" aria-hidden="true" />
      </div>
    )
  }
  <div class="services-section__container">
    <!-- Left Column: Header -->
    <header class="services-section__header">
      <SectionTitle>{title}</SectionTitle>
      {
        description && (
          <p class="services-section__description">{description}</p>
        )
      }
      {
        showAllLink && (
          <a href="/services" class="services-section__link">
            View All Services
            <span class="services-section__link-arrow">â†’</span>
          </a>
        )
      }
    </header>

    <!-- Right Column: Vertical Card Stack (Desktop) -->
    <div class="services-cards">
      {
        services.map((service) => (
          <article class="services-card">
            <h3 class="services-card__title">{service.title}</h3>
            {service.homepageText && (
              <div class="services-card__description">
                <PortableText content={service.homepageText} />
              </div>
            )}
          </article>
        ))
      }
    </div>

    <!-- Mobile: Horizontal Slider -->
    <div class="services-slider">
      {
        services.map((service) => (
          <article class="services-slider__card">
            <h3 class="services-slider__title">{service.title}</h3>
            {service.homepageText && (
              <div class="services-slider__description">
                <PortableText content={service.homepageText} />
              </div>
            )}
          </article>
        ))
      }
    </div>
  </div>
</section>

<script>
  // Handle background image blur-up loading effect
  const bgImage = document.querySelector(
    '.services-section__bg-image'
  ) as HTMLImageElement;
  const bgBlur = document.querySelector(
    '.services-section__bg-blur'
  ) as HTMLElement;

  if (bgImage) {
    const handleImageLoad = () => {
      bgImage.classList.add('loaded');
      if (bgBlur) {
        bgBlur.classList.add('loaded');
      }
    };

    // Check if already loaded (cached)
    if (bgImage.complete && bgImage.naturalHeight !== 0) {
      handleImageLoad();
    } else {
      bgImage.addEventListener('load', handleImageLoad);
    }
  }
</script>

<style>
  /* ========================================
     BASE SECTION STYLES
     ======================================== */
  .services-section {
    position: relative;
    padding: var(--space-2xl) 0;
    background: var(--fs-bg, var(--color-background));
  }

  /* ========================================
     BACKGROUND IMAGE STYLES
     ======================================== */
  .services-section__bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  /* LQIP blur placeholder - fades out when main image loads */
  .services-section__bg-blur {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    filter: blur(20px);
    transform: scale(1.1);
    opacity: 1;
    transition: opacity 0.6s ease-out;
  }

  .services-section__bg-blur.loaded {
    opacity: 0;
  }

  /* Main background image with Ken Burns effect */
  .services-section__bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.6s ease-out;
    animation: services-ken-burns 25s ease-in-out infinite alternate;
  }

  .services-section__bg-image.loaded {
    opacity: 1;
  }

  @keyframes services-ken-burns {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.08);
    }
  }

  /* Dark overlay for text legibility */
  .services-section__bg-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.35) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.6) 100%
    );
  }

  /* Subtle grain texture for depth */
  .services-section__bg-grain {
    position: absolute;
    inset: 0;
    opacity: 0.08;
    pointer-events: none;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
  }

  /* When background image is present, ensure content is above */
  .services-section--has-bg-image .services-section__container {
    position: relative;
    z-index: 1;
  }

  /* Hide background color when image is present */
  .services-section--has-bg-image {
    background: transparent;
  }

  /* Reduce motion: disable Ken Burns animation */
  @media (prefers-reduced-motion: reduce) {
    .services-section__bg-image {
      animation: none;
    }
  }

  .services-section__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-lg, 2rem);
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--space-2xl, 4rem);
    align-items: start;
  }

  /* ========================================
     HEADER STYLES (Left Column)
     ======================================== */
  .services-section__header {
    position: relative;
    /* Removed sticky positioning and transforms */
  }

  .services-section__header :global(.section-title) {
    text-align: left;
  }

  .services-section__description {
    font-size: var(--font-size-lg, 1.125rem);
    color: var(--fs-description-color, var(--color-text-muted));
    line-height: 1.6;
    margin: 0 0 var(--space-lg, 1.5rem) 0;
    max-width: 400px;
  }

  .services-section__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs, 0.5rem);
    font-size: var(--font-size-base, 1rem);
    color: var(--fs-link-color, var(--color-text));
    text-decoration: none;
    transition: gap 0.2s ease;
  }

  .services-section__link:hover {
    gap: var(--space-sm, 0.75rem);
  }

  .services-section__link-arrow {
    transition: transform 0.2s ease;
  }

  .services-section__link:hover .services-section__link-arrow {
    transform: translateX(4px);
  }

  /* ========================================
     DESKTOP: VERTICAL CARD STACK
     ======================================== */
  .services-cards {
    display: flex;
    flex-direction: column;
    gap: var(--space-md, 1rem);
  }

  .services-card {
    display: flex;
    align-items: center;
    gap: var(--space-lg, 1.5rem);
    padding: var(--space-lg, 1.5rem);
    border: 1px solid var(--color-border, #404040);
    border-radius: 16px;
    background: var(--fs-accent, var(--color-accent));
    backdrop-filter: blur(10px);
    transition: border-color 0.3s ease;
  }

  .services-card:hover {
    border-color: var(--fs-accent, var(--color-accent));
  }

  .services-card__title {
    flex: 0 0 30%;
    font-family: var(--font-heading, Georgia, serif);
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    font-weight: 400;
    line-height: 1.3;
    margin: 0;
    color: var(--fs-title-color, var(--color-text));
  }

  .services-card__description {
    flex: 1;
    font-size: var(--font-size-base, 1rem);
    color: var(--fs-card-text-color, var(--color-text-muted));
    line-height: 1.6;
  }

  .services-card__description :global(p) {
    margin: 0;
  }

  /* ========================================
     MOBILE: HORIZONTAL SLIDER
     ======================================== */
  .services-slider {
    display: none;
  }

  .services-slider__card {
    flex: 0 0 280px;
    padding: var(--space-lg, 1.5rem);
    border: 1px solid var(--color-border, #404040);
    border-radius: 16px;
    background: var(--fs-accent, var(--color-accent));
    backdrop-filter: blur(10px);
    scroll-snap-align: start;
  }

  .services-slider__title {
    font-family: var(--font-heading, Georgia, serif);
    font-size: var(--font-size-xl, 1.5rem);
    font-weight: 400;
    color: var(--fs-title-color, var(--color-text));
    margin: 0 0 var(--space-sm, 0.5rem) 0;
    line-height: 1.2;
  }

  .services-slider__description {
    font-size: var(--font-size-base, 1rem);
    color: var(--fs-card-text-color, var(--color-text-muted));
    line-height: 1.6;
  }

  .services-slider__description :global(p) {
    margin: 0;
  }

  /* ========================================
     RESPONSIVE BREAKPOINTS
     ======================================== */
  @media (max-width: 900px) {
    /* Hide desktop layout */
    .services-section__container {
      display: block;
    }

    .services-cards {
      display: none;
    }

    /* Show mobile slider */
    .services-slider {
      display: flex;
      gap: var(--space-md, 1rem);
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      padding: var(--space-lg, 1.5rem) 0;
      margin: 0 calc(-1 * var(--space-lg, 2rem));
      padding-left: var(--space-lg, 2rem);
      padding-right: var(--space-lg, 2rem);
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
    }

    .services-slider::-webkit-scrollbar {
      display: none;
    }

    .services-section__header {
      position: relative;
      top: 0;
      margin-bottom: var(--space-md, 1rem);
    }
  }

  /* Tablet adjustments */
  @media (min-width: 901px) and (max-width: 1100px) {
    .services-section__container {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-xl, 3rem);
    }
  }
</style>
