---
/**
 * AboutTwoPhotos - Two photos side by side with optional title and description
 * Matches PDF "A Personal Glimpse" section layout
 */
import Image from '@components/media/Image.astro';
import { resolveColorSelection } from '@lib/sanity/colorResolver';
import { sanityClient as client } from 'sanity:client';
import { siteSettingsQuery } from '@lib/sanity/queries';
import type { SanityImageSource } from '@sanity/image-url/lib/types/types';

interface ColorData {
  label?: string;
  value: string;
}

interface GradientColorData {
  colorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  shade?: number;
  customColor?: ColorData;
}

interface GradientData {
  direction?: string;
  startColor?: GradientColorData;
  endColor?: GradientColorData;
}

interface ImageData {
  asset: SanityImageSource;
  alt?: string;
  hotspot?: { x: number; y: number };
  crop?: { top: number; bottom: number; left: number; right: number };
}

interface Props {
  title?: string;
  titleScriptPortion?: string;
  description?: string;
  images?: ImageData[];
  titleColorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  titleColorShade?: number;
  titleCustomColor?: ColorData;
  textColor?: 'base' | 'muted' | 'contrast';
  backgroundColorMode?: 'solid' | 'gradient';
  backgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  backgroundColorShade?: number;
  backgroundCustomColor?: ColorData;
  backgroundGradient?: GradientData;
}

const {
  title,
  titleScriptPortion,
  description,
  images = [],
  titleColorType = 'primary',
  titleColorShade = 0,
  titleCustomColor,
  textColor = 'muted',
  backgroundColorMode = 'solid',
  backgroundColorType = 'default',
  backgroundColorShade = 95,
  backgroundCustomColor,
  backgroundGradient,
} = Astro.props;

// Fetch site settings for colors
const settings = await client.fetch(siteSettingsQuery);
const siteColors = settings?.colors;

// Resolve background color
let backgroundColor = 'transparent';
if (backgroundColorType !== 'default') {
  backgroundColor =
    backgroundColorMode === 'gradient' && backgroundGradient
      ? `linear-gradient(${backgroundGradient.direction || '135deg'}, ${resolveColorSelection(backgroundGradient.startColor, siteColors)}, ${resolveColorSelection(backgroundGradient.endColor, siteColors)})`
      : resolveColorSelection(
          {
            colorType: backgroundColorType,
            shade: backgroundColorShade,
            customColor: backgroundCustomColor,
          },
          siteColors
        );
}

// Resolve title color
const titleColor = resolveColorSelection(
  {
    colorType: titleColorType,
    shade: titleColorShade,
    customColor: titleCustomColor,
  },
  siteColors
);

// Text color mapping
const textColorMap = {
  base: 'var(--color-text)',
  muted: 'var(--color-text-muted)',
  contrast: 'var(--color-text-contrast)',
};

// Process title for script portion
const renderTitle = () => {
  if (!title) return null;
  if (!titleScriptPortion || !title.includes(titleScriptPortion)) {
    return { full: title };
  }
  const parts = title.split(titleScriptPortion);
  return {
    before: parts[0] || '',
    script: titleScriptPortion,
    after: parts[1] || '',
  };
};

const titleParts = renderTitle();
const hasScriptPortion = titleParts && 'script' in titleParts;

const cssVars = [
  `--two-photos-bg: ${backgroundColor}`,
  `--two-photos-title-color: ${titleColor}`,
  `--two-photos-text-color: ${textColorMap[textColor]}`,
].join('; ');
---

<section class="two-photos" style={cssVars}>
  <div class="container">
    {
      (title || description) && (
        <div class="two-photos__header">
          {titleParts && (
            <h2 class="two-photos__title">
              {hasScriptPortion ? (
                <>
                  {titleParts.before}
                  <span class="two-photos__title-script">
                    {titleParts.script}
                  </span>
                  {titleParts.after}
                </>
              ) : (
                titleParts.full
              )}
            </h2>
          )}
          {description && <p class="two-photos__description">{description}</p>}
        </div>
      )
    }
    {
      images[0] && images[1] && (
        <div class="two-photos__grid">
          <figure class="two-photos__image">
            <Image
              image={images[0]}
              alt={images[0].alt || 'Photo 1'}
              sizes="(max-width: 768px) 100vw, 50vw"
            />
          </figure>
          <figure class="two-photos__image">
            <Image
              image={images[1]}
              alt={images[1].alt || 'Photo 2'}
              sizes="(max-width: 768px) 100vw, 50vw"
            />
          </figure>
        </div>
      )
    }
  </div>
</section>

<style>
  .two-photos {
    background: var(--two-photos-bg);
    padding: var(--space-2xl) 0;
  }

  .container {
    max-width: var(--container-max-width);
    margin-inline: auto;
    padding-inline: var(--container-padding);
  }

  .two-photos__header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--space-xl);
  }

  .two-photos__title {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: var(--font-weight-normal);
    font-style: italic;
    color: var(--two-photos-title-color);
    margin: 0 0 var(--space-md);
    line-height: 1.3;
  }

  .two-photos__title-script {
    font-family: var(--font-script, 'Cormorant Garamond'), Georgia, serif;
  }

  .two-photos__description {
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    color: var(--two-photos-text-color);
    margin: 0;
  }

  .two-photos__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-md);
  }

  @media (min-width: 640px) {
    .two-photos__grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-lg);
    }
  }

  .two-photos__image {
    margin: 0;
    overflow: hidden;
    border-radius: var(--border-radius-md);
    aspect-ratio: 4 / 3;
  }

  .two-photos__image :global(img),
  .two-photos__image :global(.image-blur-wrapper) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .two-photos__image:hover :global(img) {
    transform: scale(1.03);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const prefersReducedMotion = window.matchMedia(
    '(prefers-reduced-motion: reduce)'
  ).matches;

  if (!prefersReducedMotion) {
    const sections = gsap.utils.toArray('.two-photos') as HTMLElement[];
    sections.forEach((section) => {
      const header = section.querySelector('.two-photos__header');
      const images = section.querySelectorAll('.two-photos__image');

      // Animate header
      if (header) {
        gsap.from(header.children, {
          scrollTrigger: {
            trigger: section,
            start: 'top 80%',
            once: true,
          },
          opacity: 0,
          y: 20,
          duration: 0.6,
          stagger: 0.1,
          ease: 'power2.out',
        });
      }

      // Animate images
      if (images.length) {
        gsap.from(images, {
          scrollTrigger: {
            trigger: section,
            start: 'top 80%',
            once: true,
          },
          opacity: 0,
          y: 30,
          duration: 0.7,
          stagger: 0.15,
          delay: 0.2,
          ease: 'power2.out',
        });
      }
    });
  }
</script>
