---
import SectionTitle from '@components/ui/SectionTitle.astro';
import { resolveColorSelection } from '@lib/sanity/colorResolver';
import { urlForImage } from '@lib/sanity/image';
import { sanityClient as client } from 'sanity:client';
import { siteSettingsQuery } from '@lib/sanity/queries';

interface ColorData {
  label?: string;
  value: string;
}

interface SanityImageAsset {
  _id: string;
  url: string;
  metadata?: {
    lqip?: string;
    dimensions?: {
      width: number;
      height: number;
      aspectRatio: number;
    };
  };
}

interface SanityImage {
  asset?: SanityImageAsset;
  alt?: string;
  seoFilename?: string;
  hotspot?: {
    x: number;
    y: number;
  };
  crop?: {
    top: number;
    bottom: number;
    left: number;
    right: number;
  };
}

interface GradientColorData {
  colorType?: 'primary' | 'secondary' | 'accent' | 'custom';
  shade?: number;
  customColor?: ColorData;
}

interface GradientData {
  direction?: string;
  startColor?: GradientColorData;
  endColor?: GradientColorData;
}

interface PortableTextChild {
  _key: string;
  _type: string;
  text: string;
  marks?: string[];
}

interface PortableTextBlock {
  _key: string;
  _type: string;
  children?: PortableTextChild[];
  style?: string;
}

interface Props {
  title: string;
  showTitle?: boolean;
  tagline?: PortableTextBlock[];
  description?: PortableTextBlock[];
  fontSize?: number;
  // Background type settings
  backgroundType?: 'image' | 'color';
  backgroundImage?: SanityImage;
  colorMode?: 'solid' | 'gradient';
  gradient?: GradientData;
  // Solid color settings
  backgroundColorType?:
    | 'default'
    | 'primary'
    | 'secondary'
    | 'accent'
    | 'custom';
  backgroundColorShade?: number;
  backgroundCustomColor?: ColorData;
  taglineColorType?: 'default' | 'primary' | 'secondary' | 'accent' | 'custom';
  taglineColorShade?: number;
  taglineCustomColor?: ColorData;
  textColor?: 'base' | 'contrast';
}

const {
  title,
  showTitle = true,
  tagline,
  description,
  fontSize = 2,
  backgroundType = 'color',
  backgroundImage,
  colorMode = 'solid',
  gradient,
  backgroundColorType = 'default',
  backgroundColorShade = 0,
  backgroundCustomColor,
  taglineColorType = 'default',
  taglineColorShade = 0,
  taglineCustomColor,
  textColor = 'base',
} = Astro.props;

// Fetch site settings for colors
const settings = await client.fetch(siteSettingsQuery);
const siteColors = settings?.colors;

// Determine background mode
const hasBackgroundImage = backgroundType === 'image' && backgroundImage?.asset;
const isGradient = backgroundType === 'color' && colorMode === 'gradient';
const isSolidColor = backgroundType === 'color' && colorMode !== 'gradient';

// Generate background image URL if type is 'image'
const bgImageUrl = hasBackgroundImage
  ? urlForImage(backgroundImage).width(1920).height(1080).auto('format').url()
  : null;
const bgImageLqip = hasBackgroundImage
  ? backgroundImage?.asset?.metadata?.lqip
  : null;
const bgImageAlt = backgroundImage?.alt || '';
const bgHotspot = backgroundImage?.hotspot;
const bgHotspotX = bgHotspot ? `${bgHotspot.x * 100}%` : '50%';
const bgHotspotY = bgHotspot ? `${bgHotspot.y * 100}%` : '50%';

// Resolve gradient colors
let gradientCss: string | null = null;
if (isGradient && gradient) {
  const direction = gradient.direction || '135deg';
  const startColor = resolveColorSelection(gradient.startColor, siteColors);
  const endColor = resolveColorSelection(gradient.endColor, siteColors);
  gradientCss = `linear-gradient(${direction}, ${startColor}, ${endColor})`;
}

// Resolve background color (null if default)
const backgroundColor =
  isSolidColor && (backgroundColorType === 'default' || !backgroundColorType)
    ? null
    : isSolidColor
      ? resolveColorSelection(
          {
            colorType: backgroundColorType,
            shade: backgroundColorShade,
            customColor: backgroundCustomColor,
          },
          siteColors
        )
      : null;

// Resolve tagline color (null if default)
const taglineColor =
  taglineColorType === 'default' || !taglineColorType
    ? null
    : resolveColorSelection(
        {
          colorType: taglineColorType,
          shade: taglineColorShade,
          customColor: taglineCustomColor,
        },
        siteColors
      );

// Fluid font size: 1.75rem minimum, scales with viewport, capped at Sanity fontSize
const fluidFontSize = `clamp(1.75rem, 4vw, ${fontSize}rem)`;

// Determine effective text color - default to contrast for image backgrounds
const effectiveTextColor = hasBackgroundImage ? 'contrast' : textColor;

// Define CSS variables for dynamic colors
const cssVars: Record<string, string> = {
  '--about-font-size': fluidFontSize,
  '--about-text':
    effectiveTextColor === 'contrast'
      ? 'var(--color-text-contrast)'
      : 'var(--color-text)',
};

// Set background based on type
if (gradientCss) {
  cssVars['--about-bg'] = gradientCss;
} else if (backgroundColor) {
  cssVars['--about-bg'] = backgroundColor;
}

// Only set tagline color if not default
if (taglineColor) {
  cssVars['--about-tagline-color'] = taglineColor;
}

const cssVarsString = Object.entries(cssVars)
  .map(([key, value]) => `${key}: ${value}`)
  .join('; ');

// Render portable text block children with marks (bold = accent highlight)
const renderChildren = (children: PortableTextChild[] | undefined) => {
  if (!children) return '';
  return children
    .map((child) => {
      if (child._type !== 'span') return child.text || '';
      const isBold = child.marks?.includes('strong');
      if (isBold) {
        return `<span class="highlight">${child.text}</span>`;
      }
      return child.text;
    })
    .join('');
};

// Process tagline blocks
const taglineParagraphs =
  tagline
    ?.filter((block: PortableTextBlock) => block._type === 'block')
    .map((block: PortableTextBlock) => renderChildren(block.children)) || [];

// Process description blocks
const descriptionParagraphs =
  description
    ?.filter((block: PortableTextBlock) => block._type === 'block')
    .map((block: PortableTextBlock) => renderChildren(block.children)) || [];
---

<section
  class:list={[
    'about-section',
    { 'about-section--has-bg-image': hasBackgroundImage },
  ]}
  style={cssVarsString}
>
  {/* Background Image Layer */}
  {
    hasBackgroundImage && bgImageUrl && (
      <div class="about-section__bg">
        <div
          class="about-section__bg-blur"
          style={bgImageLqip ? `background-image: url(${bgImageLqip})` : ''}
        />
        <img
          src={bgImageUrl}
          alt={bgImageAlt}
          class="about-section__bg-image"
          style={`object-position: ${bgHotspotX} ${bgHotspotY}`}
          loading="eager"
          decoding="async"
        />
        <div class="about-section__bg-overlay" />
        <div class="about-section__bg-grain" aria-hidden="true" />
      </div>
    )
  }
  <div class="container">
    <SectionTitle class={!showTitle ? 'visually-hidden' : undefined}>
      {title}
    </SectionTitle>

    <div class="about-section__content">
      {
        taglineParagraphs.length > 0 && (
          <div class="about-section__tagline">
            {taglineParagraphs.map((paragraphHtml) => (
              <p set:html={paragraphHtml} />
            ))}
          </div>
        )
      }

      {
        descriptionParagraphs.length > 0 && (
          <div class="about-section__description">
            {descriptionParagraphs.map((paragraphHtml) => (
              <p set:html={paragraphHtml} />
            ))}
          </div>
        )
      }
    </div>
  </div>
</section>

<script>
  // Handle background image blur-up loading effect
  const bgImage = document.querySelector(
    '.about-section__bg-image'
  ) as HTMLImageElement;
  const bgBlur = document.querySelector(
    '.about-section__bg-blur'
  ) as HTMLElement;

  if (bgImage) {
    const handleImageLoad = () => {
      bgImage.classList.add('loaded');
      if (bgBlur) {
        bgBlur.classList.add('loaded');
      }
    };

    // Check if already loaded (cached)
    if (bgImage.complete && bgImage.naturalHeight !== 0) {
      handleImageLoad();
    } else {
      bgImage.addEventListener('load', handleImageLoad);
    }
  }
</script>

<style>
  .about-section {
    position: relative;
    padding: var(--space-2xl) 0;
    background: var(--about-bg, var(--color-background));
  }

  /* ========================================
     BACKGROUND IMAGE STYLES
     ======================================== */
  .about-section__bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  /* LQIP blur placeholder - fades out when main image loads */
  .about-section__bg-blur {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    filter: blur(20px);
    transform: scale(1.1);
    opacity: 1;
    transition: opacity 0.6s ease-out;
  }

  .about-section__bg-blur.loaded {
    opacity: 0;
  }

  /* Main background image with Ken Burns effect */
  .about-section__bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.6s ease-out;
    animation: about-ken-burns 25s ease-in-out infinite alternate;
  }

  .about-section__bg-image.loaded {
    opacity: 1;
  }

  @keyframes about-ken-burns {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.08);
    }
  }

  /* Dark overlay for text legibility */
  .about-section__bg-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.35) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.6) 100%
    );
  }

  /* Subtle grain texture for depth */
  .about-section__bg-grain {
    position: absolute;
    inset: 0;
    opacity: 0.08;
    pointer-events: none;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
  }

  /* When background image is present, ensure content is above */
  .about-section--has-bg-image .container {
    position: relative;
    z-index: 1;
  }

  /* Hide background color when image is present */
  .about-section--has-bg-image {
    background: transparent;
  }

  /* Reduce motion: disable Ken Burns animation */
  @media (prefers-reduced-motion: reduce) {
    .about-section__bg-image {
      animation: none;
    }
  }

  .about-section__content {
    margin-inline: auto;
  }

  /* Tagline: Large Lora (serif) */
  .about-section__tagline p {
    font-family: var(--font-heading);
    font-size: var(--about-font-size, 2rem);
    text-align: center;
    margin-block-end: var(--space-md);
    color: var(--about-tagline-color, var(--about-text, var(--color-text)));
  }

  .about-section__tagline p:last-child {
    margin-block-end: var(--space-lg);
  }

  /* Description: Smaller Now (sans-serif) */
  .about-section__description p {
    font-family: var(--font-sans);
    font-size: var(--font-size-lg);
    text-align: center;
    margin-inline: auto;
    margin-block-end: var(--space-md);
    color: var(--about-text, var(--color-text));
    line-height: var(--line-height-relaxed);
  }

  .about-section__description p:last-child {
    margin-block-end: 0;
  }

  /* Highlight styling */
  .about-section__tagline :global(.highlight) {
    color: var(--about-tagline-color, var(--color-accent));
  }

  .about-section__description :global(.highlight) {
    color: var(--color-accent);
  }
</style>

