---
import SectionTitle from '@components/ui/SectionTitle.astro';

interface PortableTextChild {
  _key: string;
  _type: string;
  text: string;
  marks?: string[];
}

interface PortableTextBlock {
  _key: string;
  _type: string;
  children?: PortableTextChild[];
  style?: string;
}

interface Props {
  title: string;
  showTitle?: boolean;
  content: PortableTextBlock[];
  fontSize?: number;
}

const { title, showTitle = true, content, fontSize = 2 } = Astro.props;

// Render portable text block children with marks (bold = accent highlight)
const renderChildren = (children: PortableTextChild[] | undefined) => {
  if (!children) return '';
  return children
    .map((child) => {
      if (child._type !== 'span') return child.text || '';
      const isBold = child.marks?.includes('strong');
      if (isBold) {
        return `<span class="highlight">${child.text}</span>`;
      }
      return child.text;
    })
    .join('');
};

// Group blocks by paragraph (split by empty blocks or different styles)
const paragraphs =
  content
    ?.filter((block: PortableTextBlock) => block._type === 'block')
    .map((block: PortableTextBlock) => renderChildren(block.children)) || [];
---

<section class="about-section" style={`--about-font-size: ${fontSize}rem;`}>
  <div class="container">
    <SectionTitle class={!showTitle ? 'visually-hidden' : undefined}>
      {title}
    </SectionTitle>

    <div class="about-section__content">
      <div class="about-section__text">
        {
          paragraphs.map((paragraphHtml) => (
            <p
              class="about-section__paragraph"
              data-animated="true"
              set:html={paragraphHtml}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    padding: var(--space-2xl) 0;
  }

  .about-section__content {
    margin-inline: auto;
  }

  .about-section__paragraph {
    font-family: var(--font-heading);
    font-size: var(--about-font-size, 2rem);
    text-align: center;
    margin-block-end: var(--space-md);
  }

  .about-section__paragraph:last-child {
    margin-block-end: 0;
  }
</style>

<script>
  import { setupAnimationLifecycle, createTextReveal } from '@lib/animation';

  setupAnimationLifecycle(() => {
    createTextReveal('.about-section__paragraph', {
      gradient: 'darkOnLight',
    });
  });
</script>
