---
import { Icon } from 'astro-icon/components';

interface Props {
  iconName?: string | undefined;
  iconColor: string;
  iconBgColor: string;
  title: string;
  titleColor?: string | undefined;
  description: string;
  cardBgColor?: string | undefined;
}

const {
  iconName,
  iconColor,
  iconBgColor,
  title,
  titleColor,
  description,
  cardBgColor,
} = Astro.props;

const cssVars = [
  `--card-icon-color: ${iconColor}`,
  `--card-icon-bg: ${iconBgColor}`,
  titleColor ? `--card-title-color: ${titleColor}` : null,
  cardBgColor ? `--card-bg: ${cardBgColor}` : null,
]
  .filter(Boolean)
  .join('; ');
---

<div class="core-values__card" style={cssVars}>
  {
    iconName && (
      <div class="core-values__icon-wrapper">
        <Icon name={iconName} class="core-values__icon" aria-hidden="true" />
      </div>
    )
  }
  <h3 class="core-values__title">{title}</h3>
  <p class="core-values__description">{description}</p>
</div>

<style>
  .core-values__card {
    background: var(--card-bg, white);
    padding: 2rem;
    border-radius: 0.75rem;
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    border: 1px solid rgb(241 245 249);
    transition: box-shadow 0.15s ease;
  }

  .core-values__card:hover {
    box-shadow:
      0 4px 6px -1px rgb(0 0 0 / 0.1),
      0 2px 4px -2px rgb(0 0 0 / 0.1);
  }

  .core-values__icon-wrapper {
    width: 3.5rem;
    height: 3.5rem;
    background-color: var(--card-icon-bg);
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--card-icon-color);
    margin-bottom: 1.5rem;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 768px) {
    .core-values__icon-wrapper {
      margin-left: 0;
      margin-right: 0;
    }
  }

  .core-values__icon {
    width: 28px;
    height: 28px;
  }

  .core-values__title {
    font-family: var(--font-body);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--card-title-color, var(--color-accent));
    margin: 0 0 1rem;
  }

  .core-values__description {
    color: rgb(71 85 105);
    line-height: 1.7;
    margin: 0;
  }
</style>
