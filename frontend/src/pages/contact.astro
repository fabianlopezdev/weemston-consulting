---
import BaseLayout from '@layouts/BaseLayout.astro';
import { sanityClient as client } from 'sanity:client';
import { contactPageQuery } from '@lib/sanity/queries';
import HeroSection from '@components/sections/HeroSection.astro';
import SectionRenderer from '@components/sections/SectionRenderer.astro';

const lang = Astro.locals.lang || 'en';
const contactPage = await client.fetch(contactPageQuery, {
  documentId: `contactPage-${lang}`,
});

if (!contactPage) {
  return Astro.redirect('/404');
}

// Filter enabled sections
const visibleSections =
  contactPage.sections?.filter((section: any) => section.enabled) || [];
---

<BaseLayout
  title={contactPage.seo?.metaTitle || contactPage.title}
  description={contactPage.seo?.metaDescription}
>
  {contactPage.hero && <HeroSection {...contactPage.hero} />}

  {visibleSections.map((section: any) => <SectionRenderer section={section} />)}
</BaseLayout>
