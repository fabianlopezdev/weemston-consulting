---
import BaseLayout from '@layouts/BaseLayout.astro';
import { sanityClient as client } from 'sanity:client';
import { blogPageQuery } from '@lib/sanity/queries';
import HeroSection from '@components/sections/HeroSection.astro';
import SectionRenderer from '@components/sections/SectionRenderer.astro';

const lang = Astro.locals.lang || 'en';
const blogPage = await client.fetch(blogPageQuery, { language: lang });

if (!blogPage) {
  return Astro.redirect('/404');
}

// Filter enabled sections
const visibleSections =
  blogPage.sections?.filter((section: any) => section.enabled) || [];
---

<BaseLayout
  title={blogPage.seo?.metaTitle || blogPage.title}
  description={blogPage.seo?.metaDescription}
>
  {blogPage.hero && <HeroSection {...blogPage.hero} />}

  {visibleSections.map((section: any) => <SectionRenderer section={section} />)}
</BaseLayout>
