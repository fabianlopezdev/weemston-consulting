---
import BaseLayout from '@layouts/BaseLayout.astro';
import { sanityClient as client } from 'sanity:client';
import { homepageQuery } from '@lib/sanity/queries';
import HeroSection from '@components/sections/HeroSection.astro';
import SectionRenderer from '@components/sections/SectionRenderer.astro';

const lang = Astro.locals.lang || 'en';
const homepage = await client.fetch(homepageQuery, {
  documentId: `homepage-${lang}`,
});

if (!homepage) {
  return Astro.redirect('/404');
}

// Filter enabled sections
const visibleSections =
  homepage.sections?.filter((section: any) => section.enabled) || [];
---

<BaseLayout title={homepage.title} description={homepage.metaDescription}>
  {homepage.hero && <HeroSection {...homepage.hero} />}

  {visibleSections.map((section: any) => <SectionRenderer section={section} />)}
</BaseLayout>
