---
import '@assets/styles/global.css';
import SkipLink from '@components/layout/SkipLink.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import SEO from '@components/seo/SEO.astro';
import { sanityClient as client } from 'sanity:client';
import { siteSettingsQuery } from '@lib/sanity/queries';
import { urlForImage } from '@lib/sanity/image';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
}

const { title, description, image, noIndex = false } = Astro.props;

// Fetch site settings for favicon and colors
const settings = await client.fetch(siteSettingsQuery);
const faviconUrl = settings?.favicon
  ? urlForImage(settings.favicon).width(512).url()
  : '/favicon.svg';

// Build inline styles to override CSS variables with Sanity settings
const customStyles = [
  // Colors
  settings?.colors?.primary?.value &&
    `--color-primary: ${settings.colors.primary.value}`,
  settings?.colors?.secondary?.value &&
    `--color-secondary: ${settings.colors.secondary.value}`,
  settings?.colors?.accent?.value &&
    `--color-accent: ${settings.colors.accent.value}`,
  // Button Styles
  settings?.buttonStyles?.borderRadius !== undefined &&
    `--button-border-radius: ${settings.buttonStyles.borderRadius}px`,
  settings?.buttonStyles?.verticalPadding !== undefined &&
    `--button-padding-vertical: ${settings.buttonStyles.verticalPadding}px`,
  settings?.buttonStyles?.horizontalPadding !== undefined &&
    `--button-padding-horizontal: ${settings.buttonStyles.horizontalPadding}px`,
]
  .filter(Boolean)
  .join('; ');
---

<!doctype html>
<html lang="en" style={customStyles}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={faviconUrl} />

    <!-- Preload critical font weights for optimal performance -->
    <link
      rel="preload"
      href="/fonts/now/Now-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/now/Now-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <SEO
      title={title}
      description={description}
      image={image}
      noIndex={noIndex}
    />
  </head>
  <body>
    <SkipLink />
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
