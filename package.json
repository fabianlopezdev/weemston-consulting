{
  "name": "website-boilerplate",
  "version": "0.1.0",
  "description": "Astro + TypeScript + Sanity boilerplate for rapid website development",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "typecheck": "astro check && tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,astro,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,astro,json,md,css}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:lighthouse": "unlighthouse",
    "commit": "cz",
    "prepare": "husky",
    "sanity:dev": "cd sanity && sanity dev",
    "sanity:build": "cd sanity && sanity build",
    "sanity:deploy": "cd sanity && sanity deploy",
    "sanity:migrate": "cd sanity && sanity exec migrations/v1-initial.ts --with-user-token",
    "sanity:seed": "cd sanity && sanity exec seed/initial.ts --with-user-token"
  },
  "dependencies": {
    "@astrojs/node": "^9.0.0",
    "@astrojs/sitemap": "^3.2.1",
    "@sanity/client": "^6.22.7",
    "@sanity/image-url": "^1.1.0",
    "astro": "^5.15.3",
    "astro-seo": "^0.8.4",
    "gsap": "^3.12.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@playwright/test": "^1.49.0",
    "@sanity/cli": "^3.63.0",
    "@sanity/eslint-config-studio": "^4.0.0",
    "@sanity/vision": "^3.63.0",
    "@types/node": "^22.9.0",
    "@unlighthouse/cli": "^0.13.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.15.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "sanity": "^3.63.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ],
    "*.{ts,js,astro,json}": [
      ".husky/check-secrets.sh"
    ]
  }
}
