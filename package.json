{
  "name": "weemston-consulting",
  "version": "0.1.0",
  "description": "Weemston Consulting website built with Astro, TypeScript, and Sanity CMS",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "studio"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:studio\" \"npm:dev:open\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:studio": "npm run dev --workspace=studio",
    "dev:open": "sleep 3 && open -a 'Brave Browser' http://localhost:4321 http://localhost:3333",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:studio": "npm run build --workspace=studio",
    "preview": "npm run preview --workspace=frontend",
    "check": "npm run check --workspace=frontend",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,astro,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,astro,json,md,css}\"",
    "test": "npm run test --workspace=frontend",
    "test:watch": "vitest --workspace=frontend",
    "test:e2e": "npm run test:e2e --workspace=frontend",
    "test:e2e:ui": "playwright test --ui",
    "test:lighthouse": "npm run test:lighthouse --workspace=frontend",
    "studio:deploy": "npm run deploy --workspace=studio",
    "studio:migrate": "npm run migrate --workspace=studio",
    "studio:seed": "npm run seed --workspace=studio",
    "commit": "cz",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.9.0",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "9.15.0",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "globals": "15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "0.14.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "8.15.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ],
    "*.{ts,js,astro,json}": [
      ".husky/check-secrets.sh"
    ]
  }
}
